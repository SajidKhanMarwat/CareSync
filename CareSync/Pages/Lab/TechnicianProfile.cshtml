@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form editing
            let isEditing = false;
            
            document.querySelector('button[class*="btn-primary"]').addEventListener('click', function() {
                if (!isEditing) {
                    // Enable editing
                    document.querySelectorAll('input:not([readonly]), textarea, select:not([disabled])').forEach(field => {
                        field.removeAttribute('readonly');
                        field.removeAttribute('disabled');
                    });
                    this.innerHTML = '<i class="ri-close-line me-1"></i>Cancel';
                    this.className = 'btn btn-outline-danger';
                    isEditing = true;
                } else {
                    // Cancel editing
                    document.querySelectorAll('input, textarea, select').forEach(field => {
                        if (!field.hasAttribute('data-editable')) {
                            field.setAttribute('readonly', 'readonly');
                        }
                    });
                    this.innerHTML = '<i class="ri-edit-line me-1"></i>Edit Profile';
                    this.className = 'btn btn-primary';
                    isEditing = false;
                }
            });
            
            // Save changes
            document.querySelector('button[class*="btn-success"]').addEventListener('click', function() {
                if (isEditing) {
                    alert('Profile updated successfully!');
                    // Reset edit mode
                    document.querySelector('button[class*="btn-outline-danger"]').click();
                } else {
                    alert('Please click Edit Profile first to make changes.');
                }
            });
            
            // Certification actions
            document.querySelectorAll('.certification-item button').forEach(btn => {
                btn.addEventListener('click', function() {
                    const certName = this.closest('.certification-item').querySelector('h6').textContent;
                    const icon = this.querySelector('i').className;
                    
                    if (icon.includes('eye')) {
                        alert(`Viewing certificate: ${certName}`);
                    } else if (icon.includes('download')) {
                        alert(`Downloading certificate: ${certName}`);
                    } else if (icon.includes('refresh')) {
                        alert(`Renewing certificate: ${certName}`);
                    }
                });
            });
            
            // Add certification
            document.querySelector('.card-header button[class*="btn-outline-primary"]').addEventListener('click', function() {
                alert('Opening certification upload form...');
            });
            
            // Quick actions
            document.querySelectorAll('.card:last-child .btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const action = this.textContent.trim();
                    
                    switch(true) {
                        case action.includes('Request Time Off'):
                            alert('Opening time off request form...');
                            break;
                        case action.includes('Swap Shifts'):
                            alert('Opening shift swap interface...');
                            break;
                        case action.includes('Training Records'):
                            alert('Opening training records...');
                            break;
                        case action.includes('Update Preferences'):
                            alert('Opening preferences settings...');
                            break;
                    }
                });
            });
        });
    </script>
}
