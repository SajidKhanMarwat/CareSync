<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareSync</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/theme/images/favicon.svg">
    
    <!-- Fonts -->
    <link rel="stylesheet" href="~/theme/fonts/remix/remixicon.css">
    
    <!-- Apollo Theme CSS -->
    <link href="~/theme/css/main.css" rel="stylesheet" />
    
    <!-- Page Specific CSS -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="blank-layout">
    
    <!-- Main content -->
    <main class="blank-main">
        @RenderBody()
    </main>
    
    <!-- Footer -->
    <footer class="text-center py-3">
        <small class="text-muted">&copy; @DateTime.Now.Year CareSync. All rights reserved.</small>
    </footer>
    
    <!-- Apollo Theme JavaScript -->
    <script src="~/theme/js/jquery.min.js"></script>
    <script src="~/theme/js/bootstrap.bundle.min.js"></script>
    <script src="~/theme/js/modernizr.js"></script>
    <script src="~/theme/js/custom.js"></script>
    
    <!-- Page Specific JavaScript -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
.blank-layout {
    background-color: var(--gray-50);
    min-height: 100vh;
}

.blank-main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}
</style>
