<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareSync</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/ApolloTheme/assets/images/favicon.svg">
    
    <!-- Fonts -->
    <link rel="stylesheet" href="~/ApolloTheme/assets/fonts/remix/remixicon.css">
    
    <!-- Apollo Theme CSS -->
    <link href="~/ApolloTheme/assets/css/main.min.css" rel="stylesheet" />
    
    <!-- Page Specific CSS -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="blank-layout">
    
    <!-- Main content -->
    <main class="blank-main">
        @RenderBody()
    </main>
    
    <!-- Apollo Theme JavaScript -->
    <script src="~/ApolloTheme/assets/js/jquery.min.js"></script>
    <script src="~/ApolloTheme/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/ApolloTheme/assets/js/modernizr.js"></script>
    <script src="~/ApolloTheme/assets/js/custom.js"></script>
    
    <!-- Page Specific JavaScript -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
.blank-layout {
    background-color: var(--gray-50);
    min-height: 100vh;
}

.blank-main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}
</style>
