<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareSync</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/ApolloTheme/assets/images/favicon.svg">
    
    <!-- Fonts -->
    <link rel="stylesheet" href="~/ApolloTheme/assets/fonts/remix/remixicon.css">
    
    <!-- Apollo Theme CSS -->
    <link href="~/ApolloTheme/assets/css/main.min.css" rel="stylesheet" />
    
    <!-- Page Specific CSS -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Page wrapper starts -->
    <div class="page-wrapper">
        
        <!-- App header starts -->
        @await Html.PartialAsync("Components/_Header")
        <!-- App header ends -->
        
        <!-- Main container starts -->
        <div class="main-container">
            
            <!-- Sidebar wrapper starts -->
            @await Html.PartialAsync("Components/_Sidebar")
            <!-- Sidebar wrapper ends -->
            
            <!-- App body starts -->
            <div class="app-body">
                
                <!-- Container starts -->
                <div class="container-fluid">
                    
                    <!-- Breadcrumb and Page Actions starts -->
                    <div class="row align-items-center mb-3">
                        <div class="col-md-8">
                            @await Html.PartialAsync("Components/_Breadcrumb")
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="page-actions">
                                @await RenderSectionAsync("PageActions", required: false)
                            </div>
                        </div>
                    </div>
                    <!-- Breadcrumb and Page Actions ends -->
                    
                    <!-- Notification Panel -->
                    @await Html.PartialAsync("Components/_NotificationPanel")
                    
                    <!-- Main content starts -->
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                    <!-- Main content ends -->
                    
                </div>
                <!-- Container ends -->
                
            </div>
            <!-- App body ends -->
            
        </div>
        <!-- Main container ends -->
        
        <!-- App footer starts -->
        @await Html.PartialAsync("Components/_Footer")
        <!-- App footer ends -->
        
    </div>
    <!-- Page wrapper ends -->
    
    <!-- Apollo Theme JavaScript -->
    <script src="~/ApolloTheme/assets/js/jquery.min.js"></script>
    <script src="~/ApolloTheme/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/ApolloTheme/assets/js/modernizr.js"></script>
    <script src="~/ApolloTheme/assets/js/moment.min.js"></script>
    <script src="~/ApolloTheme/assets/js/custom.js"></script>
    
    <!-- Page Specific JavaScript -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
