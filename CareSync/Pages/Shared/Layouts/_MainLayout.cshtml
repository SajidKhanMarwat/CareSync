<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareSync</title>
    
    <!-- Meta -->
    <meta name="description" content="CareSync - Medical Management System">
    <meta property="og:title" content="CareSync - Medical Management System">
    <meta property="og:description" content="Comprehensive Medical Management System">
    <meta property="og:type" content="Website">
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/theme/images/favicon.svg">
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/theme/fonts/remix/remixicon.css">
    <link rel="stylesheet" href="~/theme/css/main.min.css">
    
    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/theme/vendor/overlay-scroll/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/theme/vendor/daterange/daterange.css">
    
    <!-- Page Specific CSS -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Loading starts -->
    <div id="loading-wrapper">
        <div class="spin-wrapper">
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
        <div class="spin-wrapper">
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
        <div class="spin-wrapper">
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
        <div class="spin-wrapper">
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
    </div>
    <!-- Loading ends -->

    <!-- Page wrapper starts -->
    <div class="page-wrapper">
        
        <!-- Main container starts -->
        <div class="main-container">
            
            <!-- Sidebar wrapper starts -->
            @await Html.PartialAsync("Components/_Sidebar")
            <!-- Sidebar wrapper ends -->
            
            <!-- App container starts -->
            <div class="app-container">
                
                <!-- App header starts -->
                @await Html.PartialAsync("Components/_Header")
                <!-- App header ends -->
                
                <!-- App body starts -->
                <div class="app-body">
                    
                    <!-- Container starts -->
                    <div class="container-fluid">
                        
                        <!-- Breadcrumb and Page Actions starts -->
                        <div class="row gx-3 mb-3">
                            <div class="col-md-8">
                                @await Html.PartialAsync("Components/_Breadcrumb")
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="page-actions">
                                    @await RenderSectionAsync("PageActions", required: false)
                                </div>
                            </div>
                        </div>
                        <!-- Breadcrumb and Page Actions ends -->
                        
                        <!-- Notification Panel -->
                        @await Html.PartialAsync("Components/_NotificationPanel")
                        
                        <!-- Main content starts -->
                        @RenderBody()
                        <!-- Main content ends -->
                        
                    </div>
                    <!-- Container ends -->
                    
                </div>
                <!-- App body ends -->
                
            </div>
            <!-- App container ends -->
            
        </div>
        <!-- Main container ends -->
        
        <!-- App footer starts -->
        @await Html.PartialAsync("Components/_Footer")
        <!-- App footer ends -->
        
    </div>
    <!-- Page wrapper ends -->
    
    <!-- JavaScript Files -->
    <script src="~/theme/js/jquery.min.js"></script>
    <script src="~/theme/js/bootstrap.bundle.min.js"></script>
    <script src="~/theme/js/modernizr.js"></script>
    <script src="~/theme/js/moment.min.js"></script>
    <script src="~/theme/vendor/overlay-scroll/jquery.overlayScrollbars.min.js"></script>
    <script src="~/theme/vendor/daterange/daterange.js"></script>
    <script src="~/theme/js/custom.js"></script>
    
    <!-- Page Specific JavaScript -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
