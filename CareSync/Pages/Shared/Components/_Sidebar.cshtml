@{
    var userRole = ViewContext.HttpContext.Session.GetString("UserRole") ?? "Patient";
    var currentPath = ViewContext.HttpContext.Request.Path.ToString();
    var userName = ViewContext.HttpContext.Session.GetString("UserName") ?? "User";
    var userEmail = ViewContext.HttpContext.Session.GetString("UserEmail") ?? "";
}

<!-- Sidebar wrapper starts -->
<nav id="sidebar" class="sidebar-wrapper">

  <!-- Brand container starts -->
  <div class="brand-container d-flex align-items-center justify-content-between">

    <!-- App brand starts -->
    <div class="app-brand ms-3">
      <a href="/">
        <img src="~/theme/images/logo.svg" class="logo" alt="CareSync Medical System">
      </a>
    </div>
    <!-- App brand ends -->

    <!-- Pin sidebar starts -->
    <button type="button" class="pin-sidebar me-3">
      <i class="ri-menu-line"></i>
    </button>
    <!-- Pin sidebar ends -->

  </div>
  <!-- Brand container ends -->

  <!-- Sidebar profile starts -->
  <div class="sidebar-profile">
    @if (userRole == "Admin")
    {
      <img src="~/theme/images/admin.png" class="rounded-5" alt="CareSync Admin">
      <h6 class="mb-1 profile-name text-nowrap text-truncate text-primary">@userName</h6>
      <small class="profile-name text-nowrap text-truncate">System Administrator</small>
    }
    else if (userRole == "Doctor")
    {
      <img src="~/theme/images/doctor6.png" class="rounded-5" alt="CareSync Doctor">
      <h6 class="mb-1 profile-name text-nowrap text-truncate text-primary">Dr. @userName</h6>
      <small class="profile-name text-nowrap text-truncate">Medical Doctor</small>
    }
    else if (userRole == "Lab")
    {
      <img src="~/theme/images/lab-tech.png" class="rounded-5" alt="CareSync Lab">
      <h6 class="mb-1 profile-name text-nowrap text-truncate text-primary">@userName</h6>
      <small class="profile-name text-nowrap text-truncate">Lab Technician</small>
    }
    else
    {
      <img src="~/theme/images/patient2.png" class="rounded-5" alt="CareSync Patient">
      <h6 class="mb-1 profile-name text-nowrap text-truncate text-primary">@userName</h6>
      <small class="profile-name text-nowrap text-truncate">Patient</small>
    }
  </div>
  <!-- Sidebar profile ends -->

  <!-- Sidebar menu starts -->
  <div class="sidebarMenuScroll">
    <ul class="sidebar-menu">
      
      @if (userRole == "Admin")
      {
        <!-- Admin Dashboard -->
        <li class="@(currentPath.Contains("/Admin/Dashboard") ? "active current-page" : "")">
          <a href="~/Admin/Dashboard">
            <i class="ri-home-6-line"></i>
            <span class="menu-text">Admin Dashboard</span>
          </a>
        </li>
        
        <!-- Appointments Management -->
        <li class="@(currentPath.Contains("/Admin/Appointments") ? "active current-page" : "")">
          <a href="~/Admin/Appointments">
            <i class="ri-calendar-line"></i>
            <span class="menu-text">Appointments</span>
          </a>
        </li>
        
        <!-- Doctors Management -->
        <li class="treeview @(currentPath.Contains("/Admin/Doctors") || currentPath.Contains("/Admin/CreateDoctor") ? "active" : "")">
          <a href="#!">
            <i class="ri-stethoscope-line"></i>
            <span class="menu-text">Doctors</span>
          </a>
          <ul class="treeview-menu">
            <li class="@(currentPath.Contains("/Admin/Doctors") ? "active" : "")">
              <a href="~/Admin/Doctors">All Doctors</a>
            </li>
            <li class="@(currentPath.Contains("/Admin/CreateDoctor") ? "active" : "")">
              <a href="~/Admin/CreateDoctor">Add Doctor</a>
            </li>
          </ul>
        </li>
        
        <!-- Patients Management -->
        <li class="treeview @(currentPath.Contains("/Admin/Patients") || currentPath.Contains("/Patients/Create") || currentPath.Contains("/Admin/Patients/Search") ? "active" : "")">
          <a href="#!">
            <i class="ri-user-heart-line"></i>
            <span class="menu-text">Patients</span>
          </a>
          <ul class="treeview-menu">
            <li class="@(currentPath.Contains("/Admin/Patients") ? "active" : "")">
              <a href="~/Admin/Patients">All Patients</a>
            </li>
            <li class="@(currentPath.Contains("/Patients/Create") ? "active" : "")">
              <a href="~/Patients/Create">Add Patient</a>
            </li>
            <li class="@(currentPath.Contains("/Admin/Patients/Search") ? "active" : "")">
              <a href="~/Admin/Patients/Search">Search Patients</a>
            </li>
          </ul>
        </li>
        
        <!-- Staff Management -->
        <li class="@(currentPath.Contains("/Admin/CreateLaboratory") ? "active current-page" : "")">
          <a href="~/Admin/CreateLaboratory">
            <i class="ri-test-tube-line"></i>
            <span class="menu-text">Add Lab Staff</span>
          </a>
        </li>
        
        <!-- User Management -->
        <li class="treeview @(currentPath.Contains("/Admin/Users") || currentPath.Contains("/Admin/Roles") ? "active" : "")">
          <a href="#!">
            <i class="ri-group-2-line"></i>
            <span class="menu-text">User Management</span>
          </a>
          <ul class="treeview-menu">
            <li class="@(currentPath.Contains("/Admin/Users") ? "active" : "")">
              <a href="~/Admin/Users">All Users</a>
            </li>
            <li class="@(currentPath.Contains("/Admin/Roles") ? "active" : "")">
              <a href="~/Admin/Roles">Roles & Permissions</a>
            </li>
            <li class="@(currentPath.Contains("/Admin/RoleRights") ? "active" : "")">
              <a href="~/Admin/RoleRights">Role Rights Mapping</a>
            </li>
          </ul>
        </li>
        
        <!-- Reports & Analytics -->
        <li class="treeview @(currentPath.Contains("/Admin/UserReports") ? "active" : "")">
          <a href="#!">
            <i class="ri-file-chart-line"></i>
            <span class="menu-text">Reports & Analytics</span>
          </a>
          <ul class="treeview-menu">
            <li class="@(currentPath.Contains("/Admin/UserReports") ? "active" : "")">
              <a href="~/Admin/UserReports">User Reports</a>
            </li>
          </ul>
        </li>
      }
      else if (userRole == "Doctor")
      {
        <!-- Doctor Dashboard -->
        <li class="@(currentPath.Contains("/Doctor/Dashboard") ? "active current-page" : "")">
          <a href="~/Doctor/Dashboard">
            <i class="ri-home-smile-2-line"></i>
            <span class="menu-text">Medical Dashboard</span>
          </a>
        </li>
        
        <!-- My Appointments -->
        <li class="@(currentPath.Contains("/Doctor/Appointments") ? "active current-page" : "")">
          <a href="~/Doctor/Appointments">
            <i class="ri-calendar-2-line"></i>
            <span class="menu-text">My Appointments</span>
          </a>
        </li>
        
        <!-- My Patients -->
        <li class="treeview @(currentPath.Contains("/Doctor/Patients") ? "active" : "")">
          <a href="#!">
            <i class="ri-empathize-line"></i>
            <span class="menu-text">My Patients</span>
          </a>
          <ul class="treeview-menu">
            <li><a href="~/Doctor/Patients">All Patients</a></li>
            <li><a href="~/Doctor/Patients/Search">Search Patients</a></li>
          </ul>
        </li>
        
        <!-- Doctor Profile -->
        <li class="@(currentPath.Contains("/Doctor/Profile") ? "active current-page" : "")">
          <a href="~/Doctor/Profile">
            <i class="ri-user-line"></i>
            <span class="menu-text">My Profile</span>
          </a>
        </li>
      }
      else if (userRole == "Patient")
      {
        <!-- Patient Dashboard -->
        <li class="@(currentPath.Contains("/Patient/Dashboard") ? "active current-page" : "")">
          <a href="~/Patient/Dashboard">
            <i class="ri-heart-pulse-line"></i>
            <span class="menu-text">Patient Dashboard</span>
          </a>
        </li>
        
        <!-- My Appointments -->
        <li class="treeview @(currentPath.Contains("/Patient/Appointments") ? "active" : "")">
          <a href="#!">
            <i class="ri-calendar-2-line"></i>
            <span class="menu-text">My Appointments</span>
          </a>
          <ul class="treeview-menu">
            <li><a href="~/Patient/Appointments">All Appointments</a></li>
            <li><a href="~/Patient/Appointments/Book">Book Appointment</a></li>
            <li><a href="~/Patient/Appointments/History">Appointment History</a></li>
          </ul>
        </li>
        
        <!-- Medical Records -->
        <li class="treeview @(currentPath.Contains("/Patient/Medical") ? "active" : "")">
          <a href="#!">
            <i class="ri-file-text-line"></i>
            <span class="menu-text">Medical Records</span>
          </a>
          <ul class="treeview-menu">
            <li><a href="~/Patient/MedicalHistory">Medical History</a></li>
            <li><a href="~/Patient/Prescriptions">My Prescriptions</a></li>
            <li><a href="~/Patient/LabReports">Lab Reports</a></li>
            <li><a href="~/Patient/Documents">Medical Documents</a></li>
          </ul>
        </li>
        
        <!-- Health Monitoring -->
        <li class="treeview @(currentPath.Contains("/Patient/Health") ? "active" : "")">
          <a href="#!">
            <i class="ri-heart-pulse-line"></i>
            <span class="menu-text">Health Monitoring</span>
          </a>
          <ul class="treeview-menu">
            <li><a href="~/Patient/Vitals">Vital Signs</a></li>
            <li><a href="~/Patient/Symptoms">Symptom Tracker</a></li>
            <li><a href="~/Patient/Medications">Medication Schedule</a></li>
          </ul>
        </li>
        
        <!-- My Profile -->
        <li class="@(currentPath.Contains("/Patient/Profile") ? "active current-page" : "")">
          <a href="~/Patient/Profile">
            <i class="ri-user-line"></i>
            <span class="menu-text">My Profile</span>
          </a>
        </li>
      }
      else if (userRole == "Lab")
      {
        <!-- Lab Dashboard -->
        <li class="@(currentPath.Contains("/Lab/Dashboard") ? "active current-page" : "")">
          <a href="~/Lab/Dashboard">
            <i class="ri-test-tube-line"></i>
            <span class="menu-text">Lab Dashboard</span>
          </a>
        </li>
        
        <!-- Lab Requests -->
        <li class="treeview @(currentPath.Contains("/Lab/Requests") ? "active" : "")">
          <a href="#!">
            <i class="ri-file-list-3-line"></i>
            <span class="menu-text">Lab Requests</span>
          </a>
          <ul class="treeview-menu">
            <li><a href="~/Lab/Requests">All Requests</a></li>
            <li><a href="~/Lab/Requests/Pending">Pending Tests</a></li>
            <li><a href="~/Lab/Requests/InProgress">In Progress</a></li>
            <li><a href="~/Lab/Requests/Completed">Completed</a></li>
          </ul>
        </li>
        
        <!-- Lab Reports -->
        <li class="treeview @(currentPath.Contains("/Lab/Reports") ? "active" : "")">
          <a href="#!">
            <i class="ri-file-chart-line"></i>
            <span class="menu-text">Lab Reports</span>
          </a>
          <ul class="treeview-menu">
            <li><a href="~/Lab/Reports">All Reports</a></li>
            <li><a href="~/Lab/Reports/Create">Create Report</a></li>
            <li><a href="~/Lab/Reports/Templates">Report Templates</a></li>
          </ul>
        </li>
        
        <!-- Lab Profile -->
        <li class="@(currentPath.Contains("/Lab/Profile") ? "active current-page" : "")">
          <a href="~/Lab/Profile">
            <i class="ri-user-line"></i>
            <span class="menu-text">Lab Profile</span>
          </a>
        </li>
      }
      
      <!-- Logout (Common for all roles) -->
      <li class="mt-4">
        <a href="~/Auth/Logout" class="text-danger">
          <i class="ri-logout-box-line"></i>
          <span class="menu-text">Logout</span>
        </a>
      </li>
    </ul>
  </div>
  <!-- Sidebar menu ends -->

  @* <!-- Sidebar contact starts -->
  <div class="sidebar-contact">
    <p class="fw-light mb-1 text-nowrap text-truncate">Emergency Contact</p>
    <h5 class="m-0 lh-1 text-nowrap text-truncate">0987654321</h5>
    <i class="ri-phone-line"></i>
  </div>
  <!-- Sidebar contact ends --> *@

</nav>
<!-- Sidebar wrapper ends -->
