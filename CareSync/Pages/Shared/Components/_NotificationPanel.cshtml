@{
    // Simplified notification system without tuples
    var alertMessage = TempData["AlertMessage"]?.ToString();
    var alertType = TempData["AlertType"]?.ToString() ?? "info";
}

<!-- Alert Messages -->
@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert-container mb-3">
        <div class="alert alert-@alertType alert-dismissible fade show" role="alert">
            <i class="ri-information-line me-2"></i>
            @alertMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<!-- Quick Stats Banner (Optional) -->
@if (ViewData["ShowQuickStats"] as bool? == true)
{
    <div class="quick-stats-banner mb-3">
        <div class="row">
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-icon bg-primary">
                        <i class="ri-user-heart-line"></i>
                    </div>
                    <div class="stat-content">
                        <h6>@(ViewData["TotalPatients"] ?? "0")</h6>
                        <p>Total Patients</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-icon bg-success">
                        <i class="ri-calendar-check-line"></i>
                    </div>
                    <div class="stat-content">
                        <h6>@(ViewData["TodayAppointments"] ?? "0")</h6>
                        <p>Today's Appointments</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-icon bg-info">
                        <i class="ri-test-tube-line"></i>
                    </div>
                    <div class="stat-content">
                        <h6>@(ViewData["PendingLabs"] ?? "0")</h6>
                        <p>Pending Lab Results</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-icon bg-warning">
                        <i class="ri-medicine-bottle-line"></i>
                    </div>
                    <div class="stat-content">
                        <h6>@(ViewData["ActivePrescriptions"] ?? "0")</h6>
                        <p>Active Prescriptions</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
