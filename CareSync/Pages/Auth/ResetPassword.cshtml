@page
@model CareSync.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "/Pages/Shared/Layouts/_AuthLayout.cshtml";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- Logo and Header -->
                    <div class="text-center mb-4">
                        <img src="~/theme/images/logo.svg" alt="CareSync" class="mb-3" style="height: 60px;">
                        @if (Model.IsFirstTimeReset)
                        {
                            <h3 class="fw-bold text-primary mb-2">Welcome to CareSync!</h3>
                            <p class="text-muted">Please create a new password for your account</p>
                        }
                        else
                        {
                            <h3 class="fw-bold text-primary mb-2">Reset Password</h3>
                            <p class="text-muted">Enter your new password below</p>
                        }
                    </div>

                    <!-- Error Messages -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="ri-error-warning-line me-2"></i>
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Success Messages -->
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="ri-check-circle-line me-2"></i>
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Reset Password Form -->
                    <form method="post">
                        <!-- Email/Username (readonly if coming from login) -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="emailOrUsername">
                                Email or Username <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-user-line text-muted"></i>
                                </span>
                                <input asp-for="Input.Email" id="emailOrUsername" 
                                       class="form-control border-start-0 ps-0" 
                                       readonly="@Model.IsFirstTimeReset"
                                       placeholder="Enter your email or username" autocomplete="username email">
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Current Password (only for non-first-time reset) -->
                        @if (!Model.IsFirstTimeReset)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold" for="currentPwd">
                                    Current Password <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="ri-lock-line text-muted"></i>
                                    </span>
                                    <input asp-for="Input.CurrentPassword" id="currentPwd" 
                                           type="password"
                                           class="form-control border-start-0 border-end-0 ps-0" 
                                           placeholder="Enter current password" autocomplete="current-password">
                                    <button class="btn btn-outline-light border-start-0" type="button" onclick="togglePassword('currentPwd', 'toggleIcon1')">
                                        <i class="ri-eye-line text-muted" id="toggleIcon1"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                            </div>
                        }

                        <!-- New Password -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="newPwd">
                                New Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-lock-2-line text-muted"></i>
                                </span>
                                <input asp-for="Input.NewPassword" id="newPwd" 
                                       type="password"
                                       class="form-control border-start-0 border-end-0 ps-0" 
                                       placeholder="Enter new password" autocomplete="new-password">
                                <button class="btn btn-outline-light border-start-0" type="button" onclick="togglePassword('newPwd', 'toggleIcon2')">
                                    <i class="ri-eye-line text-muted" id="toggleIcon2"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                            <div class="form-text">
                                <small id="password-strength-text" class="text-muted">
                                    Password must be at least 8 characters with uppercase, lowercase, number and special character
                                </small>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="confirmPwd">
                                Confirm Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-lock-2-fill text-muted"></i>
                                </span>
                                <input asp-for="Input.ConfirmPassword" id="confirmPwd" 
                                       type="password"
                                       class="form-control border-start-0 border-end-0 ps-0" 
                                       placeholder="Confirm new password" autocomplete="new-password">
                                <button class="btn btn-outline-light border-start-0" type="button" onclick="togglePassword('confirmPwd', 'toggleIcon3')">
                                    <i class="ri-eye-line text-muted" id="toggleIcon3"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="ri-refresh-line me-2"></i>Reset Password
                            </button>
                        </div>
                    </form>

                    <!-- Back to Login Link -->
                    <div class="text-center">
                        <a href="/Auth/Login" class="text-decoration-none">
                            <i class="ri-arrow-left-line me-1"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Password toggle functionality
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('ri-eye-line');
                toggleIcon.classList.add('ri-eye-off-line');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('ri-eye-off-line');
                toggleIcon.classList.add('ri-eye-line');
            }
        }

        // Password strength checker
        const newPasswordInput = document.getElementById('newPwd');
        const strengthText = document.getElementById('password-strength-text');
        
        if (newPasswordInput) {
            newPasswordInput.addEventListener('input', function() {
                const password = this.value;
                
                let hasUpper = /[A-Z]/.test(password);
                let hasLower = /[a-z]/.test(password);
                let hasNumber = /[0-9]/.test(password);
                let hasSpecial = /[!@@#$%^&*(),.?":{}|<>]/.test(password);
                let isLongEnough = password.length >= 8;
                
                if (isLongEnough && hasUpper && hasLower && hasNumber && hasSpecial) {
                    strengthText.className = 'text-success fw-semibold';
                    strengthText.innerHTML = '<i class="ri-check-line me-1"></i>Strong password';
                } else if (password.length > 0) {
                    strengthText.className = 'text-warning';
                    let missing = [];
                    if (!isLongEnough) missing.push('8+ characters');
                    if (!hasUpper) missing.push('uppercase');
                    if (!hasLower) missing.push('lowercase');
                    if (!hasNumber) missing.push('number');
                    if (!hasSpecial) missing.push('special character');
                    strengthText.innerHTML = '<i class="ri-alert-line me-1"></i>Need: ' + missing.join(', ');
                } else {
                    strengthText.className = 'text-muted';
                    strengthText.innerHTML = 'Password must be at least 8 characters with uppercase, lowercase, number and special character';
                }
            });
        }
    </script>
}
