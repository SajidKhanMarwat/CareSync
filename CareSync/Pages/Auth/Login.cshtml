@page "/Auth/Login"
@model CareSync.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "Layouts/_AuthLayout";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- Logo and Header -->
                    <div class="text-center mb-4">
                        <img src="~/theme/images/logo.svg" alt="CareSync" class="mb-3" style="height: 60px;">
                        <h3 class="fw-bold text-primary mb-2">Welcome Back</h3>
                        <p class="text-muted">Sign in to your CareSync account</p>
                    </div>

                    <!-- Success Message from Registration -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="ri-check-circle-line me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Error Messages -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="ri-error-warning-line me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Login Form -->
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="email">
                                Email Address <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-mail-line text-muted"></i>
                                </span>
                                <input type="email" asp-for="LoginRequest.Email" id="email" 
                                       class="form-control border-start-0 ps-0" 
                                       placeholder="Enter your email address" autocomplete="email">
                            </div>
                            <span asp-validation-for="LoginRequest.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="pwd">
                                Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-lock-line text-muted"></i>
                                </span>
                                <input type="password" asp-for="LoginRequest.Password" id="pwd" 
                                       class="form-control border-start-0 border-end-0 ps-0" 
                                       placeholder="Enter your password" autocomplete="current-password">
                                <button class="btn btn-outline-light border-start-0" type="button" onclick="togglePassword()">
                                    <i class="ri-eye-line text-muted" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="LoginRequest.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="LoginRequest.RememberMe" id="rememberMe">
                                <label class="form-check-label text-muted" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                            <a href="/Auth/ForgotPassword" class="text-primary text-decoration-none small">
                                Forgot password?
                            </a>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="ri-login-box-line me-2"></i>Sign In
                            </button>
                        </div>
                    </form>

                    <!-- Register Link -->
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Don't have an account? 
                            <a href="/Auth/Register" class="text-primary text-decoration-none fw-semibold">
                                Create Account
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('pwd');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'ri-eye-off-line text-primary';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'ri-eye-line text-primary';
            }
        }

        // Auto-focus on email field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('email').focus();
        });
    </script>
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
