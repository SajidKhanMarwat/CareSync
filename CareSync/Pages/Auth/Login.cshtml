@page "/Auth/Login"
@model CareSync.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "Layouts/_AuthLayout";
}

<!-- Form starts -->
<form method="post">
    <div class="auth-box">
        <a href="/" class="auth-logo mb-4">
            <img src="~/theme/images/logo.svg" alt="CareSync">
        </a>

        <h4 class="mb-4">Login to CareSync</h4>
        <p class="text-muted mb-4">Welcome back! Please sign in to your account.</p>

        <!-- Success Message from Registration -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="ri-check-circle-line me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Error Messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="ri-error-warning-line me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label" for="email">
                <i class="ri-mail-line me-1"></i>Your email <span class="text-danger">*</span>
            </label>
            <input type="email" asp-for="LoginRequest.Email" id="email" class="form-control" 
                   placeholder="Enter your email address" autocomplete="email">
            <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label class="form-label" for="pwd">
                <i class="ri-lock-line me-1"></i>Your password <span class="text-danger">*</span>
            </label>
            <div class="input-group">
                <input type="password" asp-for="LoginRequest.Password" id="pwd" class="form-control" 
                       placeholder="Enter your password" autocomplete="current-password">
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                    <i class="ri-eye-line text-primary" id="toggleIcon"></i>
                </button>
            </div>
            <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="LoginRequest.RememberMe" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Remember me
                </label>
            </div>
            <a href="/Auth/ForgotPassword" class="text-decoration-underline text-primary">
                Forgot password?
            </a>
        </div>

        <div class="mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="ri-login-box-line me-2"></i>Sign In
            </button>
        </div>

        <div class="text-center">
            <p class="mb-0">Don't have an account? 
                <a href="/Auth/Register" class="text-primary text-decoration-underline fw-semibold">
                    Create Account
                </a>
            </p>
        </div>

        <!-- Divider -->
        <div class="divider my-4">
            <span class="divider-text">or continue with</span>
        </div>

        <!-- Social Login Options -->
        <div class="d-grid gap-2">
            <button type="button" class="btn btn-outline-secondary">
                <i class="ri-google-line me-2"></i>Continue with Google
            </button>
            <button type="button" class="btn btn-outline-secondary">
                <i class="ri-microsoft-line me-2"></i>Continue with Microsoft
            </button>
        </div>
    </div>
</form>
<!-- Form ends -->

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('pwd');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'ri-eye-off-line text-primary';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'ri-eye-line text-primary';
            }
        }

        // Auto-focus on email field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('email').focus();
        });
    </script>
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
