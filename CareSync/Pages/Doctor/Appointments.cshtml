@page "/Doctor/Appointments"
@model CareSync.Pages.Doctor.AppointmentsModel
@{
    ViewData["Title"] = "My Appointments";
}

@section Styles {
    <!-- Date Range CSS -->
    <link rel="stylesheet" href="~/theme/vendor/daterange/daterange.css">
}

@section Scripts {
    <!-- Date Range JS -->
    <script src="~/theme/vendor/daterange/daterange.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize date range picker
            var dateRangeInput = document.getElementById('dateRange');
            if (dateRangeInput) {
                var start = '@(Model.StartDate?.ToString("MM/dd/yyyy") ?? DateTime.Today.ToString("MM/dd/yyyy"))';
                var end = '@(Model.EndDate?.ToString("MM/dd/yyyy") ?? DateTime.Today.ToString("MM/dd/yyyy"))';

                $('#dateRange').daterangepicker({
                    opens: 'left',
                    locale: {
                        format: 'MM/DD/YYYY'
                    },
                    startDate: start,
                    endDate: end
                }, function(start, end) {
                    var form = dateRangeInput.closest('form');
                    if (!form) return;

                    var startField = form.querySelector('input[name="StartDate"]');
                    var endField = form.querySelector('input[name="EndDate"]');

                    if (startField) startField.value = start.format('YYYY-MM-DD');
                    if (endField) endField.value = end.format('YYYY-MM-DD');

                    form.submit();
                });
            }

            // Add tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        window.showToast = function(message, type) {
            type = type || 'info';

            var container = document.getElementById('toast-container');
            if (!container) {
                container = document.createElement('div');
                container.id = 'toast-container';
                container.className = 'position-fixed top-0 end-0 p-3';
                container.style.zIndex = '1080';
                document.body.appendChild(container);
            }

            var toastEl = document.createElement('div');
            var colorClass = 'text-bg-secondary';
            if (type === 'success') colorClass = 'text-bg-success';
            else if (type === 'error') colorClass = 'text-bg-danger';
            else if (type === 'warning') colorClass = 'text-bg-warning';

            toastEl.className = 'toast align-items-center ' + colorClass + ' border-0';
            toastEl.setAttribute('role', 'alert');
            toastEl.setAttribute('aria-live', 'assertive');
            toastEl.setAttribute('aria-atomic', 'true');
            toastEl.innerHTML =
                '<div class="d-flex">' +
                '  <div class="toast-body">' + message + '</div>' +
                '  <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>' +
                '</div>';

            container.appendChild(toastEl);
            var toast = new bootstrap.Toast(toastEl);
            toast.show();
        };
    </script>
    @if (TempData["SuccessMessage"] is string successMsg)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                showToast('@successMsg'.replace(/'/g, '\\''), 'success');
            });
        </script>
    }
    @if (TempData["ErrorMessage"] is string errorMsg)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                showToast('@errorMsg'.replace(/'/g, '\\''), 'error');
            });
        </script>
    }
}

@section PageActions {
    <div class="d-flex gap-2">
        <form method="get" class="d-flex gap-2">
            <div class="input-group" style="width: 250px;">
                <span class="input-group-text bg-primary-subtle">
                    <i class="ri-calendar-2-line text-primary"></i>
                </span>
                <input type="text" id="dateRange" class="form-control" placeholder="Select Date Range">
            </div>
            <input type="hidden" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
            @* <button type="button" class="btn btn-success">
                <i class="ri-add-line me-1"></i>New Appointment
            </button> *@
            <button type="button" class="btn btn-primary">
                <i class="ri-calendar-event-line me-1"></i>Calendar View
            </button>
        </form>
    </div>
}

