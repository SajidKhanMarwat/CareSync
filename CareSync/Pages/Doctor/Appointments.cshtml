@page "/Doctor/Appointments"
@model CareSync.Pages.Doctor.AppointmentsModel
@{
    ViewData["Title"] = "My Appointments";
}

@section Styles {
    <!-- Date Range CSS -->
    <link rel="stylesheet" href="~/theme/vendor/daterange/daterange.css">
}

@section Scripts {
    <!-- Date Range JS -->
    <script src="~/theme/vendor/daterange/daterange.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize date range picker
            if (document.getElementById('dateRange')) {
                $('#dateRange').daterangepicker({
                    opens: 'left',
                    locale: {
                        format: 'MM/DD/YYYY'
                    }
                });
            }

            // Add click handlers for appointment actions
            document.querySelectorAll('[title="Start Consultation"], [title="Start Now"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Handle start consultation
                    console.log('Starting consultation...');
                });
            });

            // Add tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

@section PageActions {
    <div class="d-flex gap-2">
        <div class="input-group" style="width: 250px;">
            <span class="input-group-text bg-primary-subtle">
                <i class="ri-calendar-2-line text-primary"></i>
            </span>
            <input type="text" id="dateRange" class="form-control" placeholder="Select Date Range">
        </div>
        @* <button type="button" class="btn btn-success">
            <i class="ri-add-line me-1"></i>New Appointment
        </button> *@
        <button type="button" class="btn btn-primary">
            <i class="ri-calendar-event-line me-1"></i>Calendar View
        </button>
    </div>
}

<!-- Appointment Statistics Cards -->
<div class="row gx-3 mb-3">
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-primary-subtle rounded-5 me-3">
                        <i class="ri-calendar-check-line fs-4 text-primary"></i>
                    </div>
                    <div>
                        <h4 class="text-primary mb-1">@Model.TodayTotal</h4>
                        <small class="text-muted">Today's Appointments</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-success-subtle rounded-5 me-3">
                        <i class="ri-user-heart-line fs-4 text-success"></i>
                    </div>
                    <div>
                        <h4 class="text-success mb-1">@Model.TotalCompleted</h4>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-warning-subtle rounded-5 me-3">
                        <i class="ri-time-line fs-4 text-warning"></i>
                    </div>
                    <div>
                        <h4 class="text-warning mb-1">@Model.TotalPending</h4>
                        <small class="text-muted">Pending</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-danger-subtle rounded-5 me-3">
                        <i class="ri-close-circle-line fs-4 text-danger"></i>
                    </div>
                    <div>
                        <h4 class="text-danger mb-1">@Model.TotalCancelled</h4>
                        <small class="text-muted">Cancelled</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Today's Appointments -->
<div class="row gx-3">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="ri-calendar-2-line me-2"></i>Today's Appointments
                    </h5>
                    <span class="badge bg-primary-subtle text-primary">@Model.TodayDateReadable</span>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="ri-time-line me-1"></i>Time</th>
                                <th><i class="ri-user-line me-1"></i>Patient</th>
                                <th><i class="ri-file-text-line me-1"></i>Type</th>
                                <th><i class="ri-chat-3-line me-1"></i>Reason</th>
                                <th><i class="ri-flag-line me-1"></i>Status</th>
                                <th><i class="ri-settings-line me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TodaysAppointments.Any())
                            {
                                foreach (var appt in Model.TodaysAppointments)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="icon-box sm bg-@appt.StatusBadgeBackground rounded-circle me-2">
                                                    <i class="ri-time-line text-@appt.StatusBadgeText"></i>
                                                </div>
                                                <span class="fw-semibold">@appt.AppointmentTime</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@appt.PatientImage" class="img-2x rounded-circle me-2" alt="Patient">
                                                <div>
                                                    <span class="fw-semibold">@appt.PatientName</span>
                                                    <small class="text-muted d-block">@appt.PatientMeta</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-info-subtle text-info">@appt.AppointmentType</span></td>
                                        <td>@appt.Reason</td>
                                        <td><span class="badge bg-@appt.StatusBadgeBackground">@appt.Status</span></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-primary" title="View Details" onclick="location.href='/Doctor/AppointmentDetails?id=@appt.Id'">
                                                    <i class="ri-eye-line"></i>
                                                </button>
                                                <button class="btn btn-sm btn-sm btn-outline-info" title="View Patient" onclick="location.href='/Admin/Patients/Profile?patientId=@appt.PatientId'">
                                                    <i class="ri-user-line"></i>
                                                </button>
                                                @if (appt.CanStart)
                                                {
                                                    <button class="btn btn-sm btn-success" title="Start Now" onclick="alert('Start consultation: @appt.Id')">
                                                        <i class="ri-play-line"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" title="Reschedule" onclick="alert('Reschedule @appt.Id')">
                                                        <i class="ri-calendar-line"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="ri-calendar-line fs-1 text-muted mb-3 d-block"></i>
                                        <div class="text-muted">No appointments scheduled for today</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Recent Appointments</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Patient Name</th>
                                <th>Type</th>
                                <th>Diagnosis / Reason</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentAppointments.Any())
                            {
                                foreach (var r in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>@r.Date.ToString("yyyy-MM-dd")</td>
                                        <td>@r.PatientName</td>
                                        <td>@r.AppointmentType</td>
                                        <td>@r.Reason</td>
                                        <td><span class="badge bg-@r.StatusBadge">@r.Status</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View Report</button>
                                            <button class="btn btn-sm btn-outline-info">Prescription</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="ri-history-line fs-1 text-muted mb-3 d-block"></i>
                                        <div class="text-muted">No recent appointments</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>