<!-- Today's Appointments -->
<div class="row gx-3">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="ri-calendar-2-line me-2"></i>Today's Appointments
                    </h5>
                    <span class="badge bg-primary-subtle text-primary">@Model.TodayDateReadable</span>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="ri-time-line me-1"></i>Time</th>
                                <th><i class="ri-user-line me-1"></i>Patient</th>
                                <th><i class="ri-file-text-line me-1"></i>Type</th>
                                <th><i class="ri-chat-3-line me-1"></i>Reason</th>
                                <th><i class="ri-flag-line me-1"></i>Status</th>
                                <th><i class="ri-settings-line me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TodaysAppointments.Any())
                            {
                                foreach (var appt in Model.TodaysAppointments)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="icon-box sm bg-@appt.StatusBadgeBackground rounded-circle me-2">
                                                    <i class="ri-time-line text-@appt.StatusBadgeText"></i>
                                                </div>
                                                <span class="fw-semibold">@appt.AppointmentTime</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@appt.PatientImage" class="img-2x rounded-circle me-2" alt="Patient">
                                                <div>
                                                    <span class="fw-semibold">@appt.PatientName</span>
                                                    <small class="text-muted d-block">@appt.PatientMeta</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-info-subtle text-info">@appt.AppointmentType</span></td>
                                        <td>@appt.Reason</td>
                                        <td><span class="badge bg-@appt.StatusBadgeBackground">@appt.Status</span></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-primary" title="View Details" onclick="location.href='/Doctor/AppointmentDetails?id=@appt.AppointmentId'">
                                                    <i class="ri-eye-line"></i>
                                                </button>
                                                <button class="btn btn-sm btn-sm btn-outline-info" title="View Patient" onclick="location.href='/Admin/Patients/Profile?patientId=@appt.PatientId'">
                                                    <i class="ri-user-line"></i>
                                                </button>

                                                @if (appt.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.InProgress)
                                                {
                                                    <form method="post" asp-page-handler="Complete" asp-route-appointmentId="@appt.AppointmentId" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Complete Consultation">
                                                            <i class="ri-stop-circle-line"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else if (appt.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.PrescriptionPending)
                                                {
                                                    <button type="button" class="btn btn-sm btn-warning" title="Write Prescription" onclick="location.href='/Doctor/Checkup?appointmentId=@appt.AppointmentId'">
                                                        <i class="ri-file-list-3-line"></i>
                                                    </button>
                                                }
                                                else if (appt.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Pending ||
                                                         appt.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Scheduled)
                                                {
                                                    <form method="post" asp-page-handler="Accept" asp-route-appointmentId="@appt.AppointmentId" class="d-inline me-1">
                                                        <button type="submit" class="btn btn-sm btn-success" title="Accept Appointment">
                                                            <i class="ri-check-line"></i>
                                                        </button>
                                                    </form>

                                                    @if (appt.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Pending)
                                                    {
                                                        <form method="post" asp-page-handler="Reject" asp-route-appointmentId="@appt.AppointmentId" class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Reject Appointment">
                                                                <i class="ri-close-line"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                else if (appt.CanStart &&
                                                         appt.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Accepted)
                                                {
                                                    <form method="post" asp-page-handler="Start" asp-route-appointmentId="@appt.AppointmentId" class="d-inline me-1">
                                                        <button type="submit" class="btn btn-sm btn-success" title="Start Consultation">
                                                            <i class="ri-play-line"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" title="Reschedule" onclick="showToast('Reschedule @appt.AppointmentId', 'info')">
                                                        <i class="ri-calendar-line"></i>
                                                    </button>
                                                }

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="ri-calendar-line fs-1 text-muted mb-3 d-block"></i>
                                        <div class="text-muted">No appointments scheduled for today</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Recent Appointments</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Patient Name</th>
                                <th>Type</th>
                                <th>Diagnosis / Reason</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentAppointments.Any())
                            {
                                foreach (var r in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>@r.Date.ToString("yyyy-MM-dd")</td>
                                        <td>@r.PatientName</td>
                                        <td>@r.AppointmentType</td>
                                        <td>@r.Reason</td>
                                        <td><span class="badge bg-@r.StatusBadge">@r.Status</span></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                @if (r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Pending ||
                                                     r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Scheduled)
                                                {
                                                    <form method="post" asp-page-handler="Accept" asp-route-appointmentId="@r.AppointmentId" class="d-inline me-1">
                                                        <button type="submit" class="btn btn-sm btn-success" title="Accept Appointment">
                                                            <i class="ri-check-line"></i>
                                                        </button>
                                                    </form>

                                                    @if (r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Pending)
                                                    {
                                                        <form method="post" asp-page-handler="Reject" asp-route-appointmentId="@r.AppointmentId" class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Reject Appointment">
                                                                <i class="ri-close-line"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                else if (r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.InProgress)
                                                {
                                                    <form method="post" asp-page-handler="Complete" asp-route-appointmentId="@r.AppointmentId" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Complete Consultation">
                                                            <i class="ri-stop-circle-line"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else if (r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.PrescriptionPending)
                                                {
                                                    <button type="button" class="btn btn-sm btn-warning" title="Write Prescription" onclick="location.href='/Doctor/Checkup?appointmentId=@r.AppointmentId'">
                                                        <i class="ri-file-list-3-line"></i>
                                                    </button>
                                                }

                                                @* View Report always for PrescriptionPending/Completed; View Prescription only for Completed *@
                                                @if (r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.PrescriptionPending ||
                                                     r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Completed)
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-primary" title="View Reports" onclick="location.href='/Doctor/AppointmentReports?appointmentId=@r.AppointmentId'">
                                                        <i class="ri-file-chart-line"></i>
                                                    </button>

                                                    @if (r.Status == CareSync.Shared.Enums.Appointment.AppointmentStatus_Enum.Completed)
                                                    {
                                                        <form method="post" asp-page-handler="FollowUp" asp-route-appointmentId="@r.AppointmentId" class="d-inline me-1">
                                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Mark Follow-Up Required">
                                                                <i class="ri-arrow-go-forward-line"></i>
                                                            </button>
                                                        </form>
                                                        <button type="button" class="btn btn-sm btn-outline-info" title="View Prescription" onclick="location.href='/Doctor/AppointmentDetails?id=@r.AppointmentId'">
                                                            <i class="ri-capsule-line"></i>
                                                        </button>
                                                    }
                                                }
                                            </div>
                                        </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="ri-history-line fs-1 text-muted mb-3 d-block"></i>
                                        <div class="text-muted">No recent appointments</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>