@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Search functionality
            const searchInput = document.querySelector('input[placeholder="Search prescriptions..."]');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    console.log('Searching prescriptions:', this.value);
                });
            }
            
            // Template usage
            document.querySelectorAll('.list-group-item button').forEach(btn => {
                if (btn.textContent.trim() === 'Use') {
                    btn.addEventListener('click', function() {
                        console.log('Using template:', this.closest('.list-group-item').querySelector('h6').textContent);
                    });
                }
            });
            
            // Prescription actions
            document.querySelectorAll('[title="Send to Pharmacy"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    console.log('Sending prescription to pharmacy...');
                });
            });
        });
    </script>
}

