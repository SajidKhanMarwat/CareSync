@page "/Doctor/Prescriptions"
@model CareSync.Pages.Doctor.PrescriptionsModel
@{
    ViewData["Title"] = "Pending Prescriptions";
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Pending Prescriptions</h4>
        <a href="/Doctor/Dashboard" class="btn btn-outline-secondary">
            <i class="ri-arrow-left-line"></i> Back to Dashboard
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
        else if (!Model.PendingAppointments.Any())
        {
            <div class="text-center text-muted py-4">
                <i class="ri-file-list-3-line fs-1 d-block mb-2"></i>
                No appointments waiting for prescriptions.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Patient</th>
                            <th>Type</th>
                            <th>Reason</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var appt in Model.PendingAppointments)
                    {
                        <tr>
                            <td>@appt.AppointmentDate.ToString("dd MMM yyyy, HH:mm")</td>
                            <td>@appt.PatientName</td>
                            <td>@appt.AppointmentType</td>
                            <td>@appt.Reason</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary" onclick="location.href='/Doctor/Checkup?appointmentId=@appt.AppointmentId'">
                                    <i class="ri-file-list-3-line"></i> Write Prescription
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
