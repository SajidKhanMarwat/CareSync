@page "/Doctor/Patients/Search"
@model CareSync.Pages.Doctor.Patients.SearchModel
@{
    ViewData["Title"] = "Search Patients";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Doctor/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Doctor/Patients">Patients</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            Search Patients
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" onclick="exportPatients()">
            <i class="ri-download-line me-2"></i>Export
        </button>
        <div class="dropdown">
            <button class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                <i class="ri-filter-line me-2"></i>Filter
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="filterByStatus('all')">All Patients</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByStatus('active')">Active</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByStatus('inactive')">Inactive</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#" onclick="filterByBloodGroup('O+')">O+</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByBloodGroup('A+')">A+</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByBloodGroup('B+')">B+</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByBloodGroup('AB+')">AB+</a></li>
            </ul>
        </div>
    </div>
}

<!-- Statistics Cards -->
<div class="row gx-3 mb-4">
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-primary rounded-circle me-3">
                        <div class="icon-box md bg-primary-lighten rounded-5">
                            <i class="ri-user-heart-line fs-4 text-primary"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@Model.TotalPatients</h1>
                        <p class="m-0">My Patients</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-success rounded-circle me-3">
                        <div class="icon-box md bg-success-lighten rounded-5">
                            <i class="ri-user-smile-line fs-4 text-success"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@Model.ActivePatients</h1>
                        <p class="m-0">Active</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-info rounded-circle me-3">
                        <div class="icon-box md bg-info-lighten rounded-5">
                            <i class="ri-user-add-line fs-4 text-info"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@Model.NewThisMonth</h1>
                        <p class="m-0">New This Month</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-warning rounded-circle me-3">
                        <div class="icon-box md bg-warning-lighten rounded-5">
                            <i class="ri-calendar-check-line fs-4 text-warning"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@Model.AppointmentsToday</h1>
                        <p class="m-0">Appointments Today</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <!-- Patient Visits Trends -->
    <div class="col-xl-8 col-lg-7 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-line-chart-line me-2"></i>Patient Visit Trends
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-height">
                    <div id="patientTrends"></div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Age Distribution -->
    <div class="col-xl-4 col-lg-5 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-pie-chart-line me-2"></i>Patient Age Groups
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-height-sm">
                    <div id="ageDistribution"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Blood Groups Distribution -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-drop-line me-2"></i>Blood Group Distribution
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="icon-box md bg-danger-lighten rounded-circle mx-auto mb-2">
                                <i class="ri-drop-fill text-danger"></i>
                            </div>
                            <h4 class="text-danger">@Model.BloodGroupCounts.OPositive</h4>
                            <p class="mb-0">O+</p>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="icon-box md bg-primary-lighten rounded-circle mx-auto mb-2">
                                <i class="ri-drop-fill text-primary"></i>
                            </div>
                            <h4 class="text-primary">@Model.BloodGroupCounts.APositive</h4>
                            <p class="mb-0">A+</p>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="icon-box md bg-success-lighten rounded-circle mx-auto mb-2">
                                <i class="ri-drop-fill text-success"></i>
                            </div>
                            <h4 class="text-success">@Model.BloodGroupCounts.BPositive</h4>
                            <p class="mb-0">B+</p>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="icon-box md bg-warning-lighten rounded-circle mx-auto mb-2">
                                <i class="ri-drop-fill text-warning"></i>
                            </div>
                            <h4 class="text-warning">@Model.BloodGroupCounts.ABPositive</h4>
                            <p class="mb-0">AB+</p>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="icon-box md bg-info-lighten rounded-circle mx-auto mb-2">
                                <i class="ri-drop-fill text-info"></i>
                            </div>
                            <h4 class="text-info">@Model.BloodGroupCounts.ONegative</h4>
                            <p class="mb-0">O-</p>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="icon-box md bg-secondary-lighten rounded-circle mx-auto mb-2">
                                <i class="ri-drop-fill text-secondary"></i>
                            </div>
                            <h4 class="text-secondary">@Model.BloodGroupCounts.Others</h4>
                            <p class="mb-0">Others</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Patients Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="ri-team-line me-2"></i>Search & Manage Patients
                </h5>
                <div class="d-flex gap-2">
                    <div class="input-group" style="width: 300px;">
                        <input type="text" class="form-control" placeholder="Search by name, ID, or phone..." id="searchInput">
                        <button class="btn btn-primary" type="button" onclick="searchPatients()">
                            <i class="ri-search-line"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="patientsTable">
                        <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Contact Info</th>
                                <th>Medical Info</th>
                                <th>Last Visit</th>
                                <th>Next Appointment</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model.Patients)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/theme/images/patient.png" class="rounded-circle me-3" width="40" height="40" alt="Patient">
                                            <div>
                                                <h6 class="mb-0">@patient.Name</h6>
                                                <small class="text-muted">ID: P@patient.PatientID.ToString("000")</small>
                                                <br><small class="text-primary">Age: @patient.Age, @patient.Gender</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-bold">@patient.Email</span><br>
                                            <small class="text-muted">@patient.Phone</small><br>
                                            <small class="text-muted">@patient.Address</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="badge bg-danger-light text-danger mb-1">@patient.BloodGroup</span><br>
                                            <small class="text-muted">@patient.MaritalStatus</small><br>
                                            @if (patient.HasChronicDiseases)
                                            {
                                                <small class="text-warning"><i class="ri-alert-line"></i> Chronic Conditions</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-bold">@patient.LastVisit.ToString("MMM dd, yyyy")</span><br>
                                            <small class="text-muted">@patient.LastVisitReason</small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (patient.NextAppointment.HasValue)
                                        {
                                            <span class="badge bg-primary-subtle text-primary">@patient.NextAppointment.Value.ToString("MMM dd")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(patient.IsActive ? "bg-success" : "bg-secondary")">
                                            @(patient.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="ri-more-2-line"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/Doctor/PatientDetails?patientId=@patient.PatientID"><i class="ri-eye-line me-2"></i>View Profile</a></li>
                                                <li><a class="dropdown-item" href="/Doctor/Checkup?patientId=@patient.PatientID"><i class="ri-stethoscope-line me-2"></i>Start Checkup</a></li>
                                                <li><a class="dropdown-item" href="/Doctor/Records/Patient?patientId=@patient.PatientID"><i class="ri-file-text-line me-2"></i>Medical Records</a></li>
                                                <li><a class="dropdown-item" href="/Doctor/Appointments?patientId=@patient.PatientID"><i class="ri-calendar-line me-2"></i>Appointments</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <span class="text-muted">Showing @Model.Patients.Count of @Model.TotalPatients patients</span>
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#"><i class="ri-arrow-left-s-line"></i></a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="ri-arrow-right-s-line"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/theme/vendor/apex/apexcharts.css">
}

