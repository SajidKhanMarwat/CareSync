                            <div class="col-auto">
                                <div class="icon-box md bg-info-subtle rounded-circle">
                                    <i class="ri-calendar-check-line text-info"></i>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">Dr. Lisa Anderson</h6>
                                        <p class="text-muted mb-1">Lab Results Review</p>
                                        <small class="text-muted">
                                            <i class="ri-calendar-line me-1"></i>November 25, 2024 at 11:00 AM
                                        </small>
                                    </div>
                                    <span class="badge bg-info">Scheduled</span>
                                </div>
