@page "/Patient/Appointments"
@model CareSync.Pages.Patient.AppointmentsModel
@{
    ViewData["Title"] = "My Appointments";
}

<!-- Hero Section with Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h3 class="text-white mb-2">
                            <i class="ri-calendar-check-line me-2"></i>Manage Your Appointments
                        </h3>
                        <p class="mb-0 opacity-75">Book, view, and manage all your medical appointments in one place</p>
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <a href="/Patient/BookAppointment" class="btn btn-light btn-lg">
                            <i class="ri-add-circle-line me-2"></i>Book New Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Appointment Statistics Cards -->
<div class="row gx-3 mb-4">
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5 hover-lift" style="transition: all 0.3s ease;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-primary-subtle rounded-5 me-3">
                        <i class="ri-calendar-check-line fs-3 text-primary"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="text-primary mb-1">@Model.TotalUpcoming</h3>
                        <small class="text-muted">Upcoming Appointments</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5 hover-lift" style="transition: all 0.3s ease;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-success-subtle rounded-5 me-3">
                        <i class="ri-check-double-line fs-3 text-success"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="text-success mb-1">@Model.TotalCompleted</h3>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5 hover-lift" style="transition: all 0.3s ease;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-warning-subtle rounded-5 me-3">
                        <i class="ri-time-line fs-3 text-warning"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="text-warning mb-1">@Model.TotalPending</h3>
                        <small class="text-muted">Pending Confirmation</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6">
        <div class="card border rounded-5 hover-lift" style="transition: all 0.3s ease;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-danger-subtle rounded-5 me-3">
                        <i class="ri-close-circle-line fs-3 text-danger"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="text-danger mb-1">@Model.TotalCancelled</h3>
                        <small class="text-muted">Cancelled</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Current Appointments (Today) -->
<div class="row gx-3 mb-4">
    <div class="col-12">
        <div class="card border-start border-danger border-4">
            <div class="card-header bg-danger-subtle">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="ri-calendar-event-fill me-2"></i>Today's Appointments
                    </h5>
                    <span class="badge bg-danger">@Model.CurrentAppointments.Count Active Today</span>
                </div>
            </div>
            <div class="card-body">
                @if (Model.CurrentAppointments.Any())
                {
                    <div class="row gx-3">
                        @foreach (var appointment in Model.CurrentAppointments)
                        {
                            <div class="col-lg-6 mb-3">
                                <div class="card border rounded-4 shadow-sm hover-lift" style="transition: all 0.3s ease;">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start mb-3">
                                            <div class="me-3">
                                                <img src="@appointment.DoctorImage" class="img-5x rounded-circle border border-3 border-@appointment.StatusColor" alt="@appointment.DoctorName">
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@appointment.DoctorName</h6>
                                                <p class="text-muted mb-1 small">
                                                    <i class="ri-stethoscope-line me-1"></i>@appointment.Specialization
                                                </p>
                                                <span class="badge bg-@appointment.StatusColor-subtle text-@appointment.StatusColor">
                                                    <i class="ri-building-2-line me-1"></i>@appointment.Department
                                                </span>
                                            </div>
                                            <span class="badge bg-@appointment.StatusColor">@appointment.Status</span>
                                        </div>
                                        
                                        <div class="row g-2 mb-3">
                                            <div class="col-6">
                                                <div class="d-flex align-items-center text-muted small">
                                                    <i class="ri-time-line me-2 text-primary"></i>
                                                    <div>
                                                        <div class="fw-semibold">@appointment.AppointmentTime</div>
                                                        <div class="small">Time</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="d-flex align-items-center text-muted small">
                                                    <i class="ri-door-open-line me-2 text-info"></i>
                                                    <div>
                                                        <div class="fw-semibold">@appointment.RoomNumber</div>
                                                        <div class="small">Location</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="border-top pt-3">
                                            <div class="row g-2">
                                                <div class="col-12">
                                                    <a href="/Patient/AppointmentDetails?id=@appointment.Id" class="btn btn-primary btn-sm w-100">
                                                        <i class="ri-eye-line me-1"></i>View Full Details
                                                    </a>
                                                </div>
                                                <div class="col-6">
                                                    @if (appointment.HasPrescription)
                                                    {
                                                        <a href="/Patient/Prescriptions?appointmentId=@appointment.Id" class="btn btn-success btn-sm w-100">
                                                            <i class="ri-medicine-bottle-line me-1"></i>Prescription
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                                            <i class="ri-medicine-bottle-line me-1"></i>No Prescription
                                                        </button>
                                                    }
                                                </div>
                                                <div class="col-6">
                                                    @if (appointment.HasLabReports)
                                                    {
                                                        <a href="/Patient/LabResults?appointmentId=@appointment.Id" class="btn btn-info btn-sm w-100">
                                                            <i class="ri-file-list-3-line me-1"></i>Lab Reports
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                                            <i class="ri-file-list-3-line me-1"></i>No Reports
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="ri-calendar-check-line fs-1 text-muted mb-3 d-block"></i>
                        <h5 class="text-muted">No appointments scheduled for today</h5>
                        <p class="text-muted">Book a new appointment to see a doctor</p>
                        <a href="/Patient/BookAppointment" class="btn btn-primary">
                            <i class="ri-add-circle-line me-1"></i>Book Appointment
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Next/Upcoming Appointments -->
<div class="row gx-3 mb-4">
    <div class="col-12">
        <div class="card border-start border-primary border-4">
            <div class="card-header bg-primary-subtle">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-primary">
                        <i class="ri-calendar-2-line me-2"></i>Next Appointments
                    </h5>
                    <span class="badge bg-primary">@Model.NextAppointments.Count Scheduled</span>
                </div>
            </div>
            <div class="card-body">
                @if (Model.NextAppointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="ri-user-line me-1"></i>Doctor</th>
                                    <th><i class="ri-calendar-line me-1"></i>Date & Time</th>
                                    <th><i class="ri-stethoscope-line me-1"></i>Type</th>
                                    <th><i class="ri-flag-line me-1"></i>Status</th>
                                    <th class="text-center"><i class="ri-settings-3-line me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.NextAppointments)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@appointment.DoctorImage" class="img-3x rounded-circle me-2" alt="@appointment.DoctorName">
                                                <div>
                                                    <div class="fw-semibold">@appointment.DoctorName</div>
                                                    <small class="text-muted">@appointment.Specialization</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="fw-semibold">@appointment.AppointmentDate</div>
                                            <small class="text-muted">
                                                <i class="ri-time-line me-1"></i>@appointment.AppointmentTime
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge bg-info-subtle text-info">@appointment.AppointmentType</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-@appointment.StatusColor">@appointment.Status</span>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-1 justify-content-center">
                                                <a href="/Patient/AppointmentDetails?id=@appointment.Id" 
                                                   class="btn btn-primary btn-sm" 
                                                   data-bs-toggle="tooltip" 
                                                   title="View Full Details">
                                                    <i class="ri-eye-line"></i>
                                                </a>
                                                @if (appointment.HasPrescription)
                                                {
                                                    <a href="/Patient/Prescriptions?appointmentId=@appointment.Id" 
                                                       class="btn btn-success btn-sm"
                                                       data-bs-toggle="tooltip"
                                                       title="View Prescription">
                                                        <i class="ri-medicine-bottle-line"></i>
                                                    </a>
                                                }
                                                @if (appointment.HasLabReports)
                                                {
                                                    <a href="/Patient/LabResults?appointmentId=@appointment.Id" 
                                                       class="btn btn-info btn-sm"
                                                       data-bs-toggle="tooltip"
                                                       title="View Lab Reports">
                                                        <i class="ri-file-list-3-line"></i>
                                                    </a>
                                                }
                                                <button class="btn btn-outline-warning btn-sm"
                                                        data-bs-toggle="tooltip"
                                                        title="Reschedule"
                                                        onclick="alert('Reschedule feature coming soon!')">
                                                    <i class="ri-calendar-line"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="ri-calendar-line fs-1 text-muted mb-3 d-block"></i>
                        <h5 class="text-muted">No upcoming appointments</h5>
                        <p class="text-muted">Schedule your next visit with a doctor</p>
                        <a href="/Patient/BookAppointment" class="btn btn-primary">
                            <i class="ri-add-circle-line me-1"></i>Book Appointment
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

