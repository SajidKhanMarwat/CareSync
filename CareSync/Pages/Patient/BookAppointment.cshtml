@page "/Patient/BookAppointment"
@model CareSync.Pages.Patient.BookAppointmentModel
@{
    ViewData["Title"] = "Book Appointment";
}


@section PageActions {
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-primary" onclick="location.href='/Patient/Appointments'">
            <i class="ri-calendar-event-line me-1"></i>My Appointments
        </button>
        <button type="button" class="btn btn-outline-info" id="showHistoryBtn">
            <i class="ri-history-line me-1"></i>Appointment History
        </button>
    </div>
}

<!-- Booking Steps Progress -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="booking-steps">
                    <div class="step active" data-step="1">
                        <div class="step-number">1</div>
                        <div class="step-title">Select Doctor</div>
                    </div>
                    <div class="step" data-step="2">
                        <div class="step-number">2</div>
                        <div class="step-title">Choose Date & Time</div>
                    </div>
                    <div class="step" data-step="3">
                        <div class="step-number">3</div>
                        <div class="step-title">Appointment Details</div>
                    </div>
                    <div class="step" data-step="4">
                        <div class="step-number">4</div>
                        <div class="step-title">Confirmation</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Booking Content -->
<form method="post" id="bookingForm">
    @Html.AntiForgeryToken()
</form>

<div class="row gx-3">
    <div class="col-xl-8">
        <!-- Step 1: Select Doctor -->
        <div class="booking-step active" id="step1">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="ri-user-line me-2"></i>Select Doctor
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Search and Filter -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchDoctor" placeholder="Search doctors by name or specialization...">
                                <button class="btn btn-outline-secondary" onclick="filterDoctors()">
                                    <i class="ri-search-line"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="specializationFilter" onchange="filterDoctors()">
                                <option value="">All Specializations</option>
                                @if (Model.AvailableDoctors != null)
                                {
                                    @foreach (var spec in Model.AvailableDoctors.Select(d => d.Specialization).Distinct().OrderBy(s => s))
                                    {
                                        <option value="@spec">@spec</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-text bg-primary-lighten">
                                    <i class="ri-calendar-line text-primary"></i>
                                </span>
                                <input type="datetime-local" class="form-control" id="availabilityFilter" onchange="filterDoctorsByDateTime()">
                                <button class="btn btn-outline-secondary" onclick="clearDateFilter()" title="Clear Filter">
                                    <i class="ri-close-line"></i>
                                </button>
                            </div>
                            <small class="text-muted">Filter doctors by availability date & time</small>
                        </div>
                    </div>

                    <!-- Doctors List -->
                    <div class="doctors-list" id="doctorsList">
                        @if (Model.AvailableDoctors != null && Model.AvailableDoctors.Any())
                        {
                            @foreach (var doctor in Model.AvailableDoctors)
                            {
                                <div class="doctor-card border rounded-4 p-3 mb-3 selectable-card" 
                                     data-doctor-id="@doctor.DoctorID" 
                                     data-specialty="@doctor.Specialization" 
                                     data-name="Dr. @doctor.DoctorName"
                                     data-fee="@doctor.ConsultationFee"
                                     data-experience="@doctor.ExperienceYears"
                                     data-location="@doctor.Location"
                                     data-rating="@doctor.Rating"
                                     data-reviews="@doctor.ReviewCount"
                                     data-available-days="@string.Join(",", doctor.AvailableDaysList)"
                                     data-available-times="@string.Join(",", doctor.AvailableTimeSlots)">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <img src="@(!string.IsNullOrEmpty(doctor.ProfileImage) ? doctor.ProfileImage : "~/theme/images/user.png")" 
                                                 class="img-4x rounded-circle" alt="@doctor.DoctorName">
                                        </div>
                                        <div class="col">
                                            <h5 class="mb-1">Dr. @doctor.DoctorName</h5>
                                            <p class="text-muted mb-2">@doctor.Specialization | @doctor.ExperienceYears years experience</p>
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="rating me-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Floor(doctor.Rating))
                                                        {
                                                            <i class="ri-star-fill text-warning"></i>
                                                        }
                                                        else if (i == Math.Ceiling(doctor.Rating) && doctor.Rating % 1 != 0)
                                                        {
                                                            <i class="ri-star-half-line text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="ri-star-line text-muted"></i>
                                                        }
                                                    }
                                                </div>
                                                <span class="text-muted">@doctor.Rating.ToString("0.0") (@doctor.ReviewCount reviews)</span>
                                            </div>
                                            <div class="doctor-info">
                                                <small class="text-muted">
                                                    <i class="ri-map-pin-line me-1"></i>@doctor.Location
                                                    <i class="ri-money-dollar-circle-line ms-3 me-1"></i>@doctor.ConsultationFee consultation
                                                </small>
                                            </div>
                                            <div class="mt-2">
                                                <small class="fw-semibold text-primary d-block mb-1">Available Days:</small>
                                                <div class="d-flex gap-1 flex-wrap">
                                                    @foreach (var day in doctor.AvailableDaysList)
                                                    {
                                                        <span class="badge bg-primary-subtle text-primary">@day</span>
                                                    }
                                                </div>
                                                <small class="fw-semibold text-success d-block mt-2 mb-1">Available Times:</small>
                                                <div class="d-flex gap-1 flex-wrap">
                                                    @foreach (var time in doctor.AvailableTimeSlots.Take(4))
                                                    {
                                                        <span class="badge bg-success-subtle text-success">@time</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="text-center">
                                                <span class="badge bg-@(doctor.AvailabilityStatus == "Available" ? "success" : "warning") mb-2">
                                                    @doctor.AvailabilityStatus
                                                </span>
                                                <div class="text-muted">
                                                    <small>Next: @doctor.NextAvailableSlot</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="ri-information-line me-2"></i>
                                No doctors available at the moment. Please try again later.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Step 2: Choose Date & Time -->
        <div class="booking-step" id="step2" style="display: none;">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="ri-calendar-line me-2"></i>Choose Date & Time
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="mb-3">Select Date</h6>
                            <div class="calendar-widget">
                                <input type="date" class="form-control" id="appointmentDate" min="2024-11-13">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-3">Available Time Slots</h6>
                            <div class="time-slots" id="timeSlots">
                                <div class="text-muted">Please select a date first</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Step 3: Appointment Details -->
        <div class="booking-step" id="step3" style="display: none;">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="ri-file-text-line me-2"></i>Appointment Details
                    </h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Appointment Type</label>
                            <select class="form-select" required>
                                <option value="">Select appointment type...</option>
                                <option value="consultation">General Consultation</option>
                                <option value="followup">Follow-up Visit</option>
                                <option value="checkup">Routine Checkup</option>
                                <option value="emergency">Emergency Consultation</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Reason for Visit</label>
                            <textarea class="form-control" rows="4" placeholder="Please describe your symptoms or reason for the appointment..." required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Current Medications (if any)</label>
                            <textarea class="form-control" rows="2" placeholder="List any medications you are currently taking..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Allergies</label>
                            <input type="text" class="form-control" placeholder="List any known allergies...">
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="insuranceCheck">
                            <label class="form-check-label" for="insuranceCheck">
                                I will use insurance for this appointment
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="reminderCheck" checked>
                            <label class="form-check-label" for="reminderCheck">
                                Send me appointment reminders via email and SMS
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Step 4: Confirmation -->
        <div class="booking-step" id="step4" style="display: none;">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="ri-check-line me-2"></i>Confirm Appointment
                    </h5>
                </div>
                <div class="card-body">
                    <div class="appointment-summary border rounded-4 p-4 mb-4">
                        <h6 class="mb-3">Appointment Summary</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="summary-item mb-3">
                                    <strong>Doctor:</strong>
                                    <div id="summaryDoctor">Dr. Sarah Johnson</div>
                                </div>
                                <div class="summary-item mb-3">
                                    <strong>Specialization:</strong>
                                    <div id="summarySpecialization">Cardiology</div>
                                </div>
                                <div class="summary-item mb-3">
                                    <strong>Date:</strong>
                                    <div id="summaryDate">November 15, 2024</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="summary-item mb-3">
                                    <strong>Time:</strong>
                                    <div id="summaryTime">10:00 AM</div>
                                </div>
                                <div class="summary-item mb-3">
                                    <strong>Type:</strong>
                                    <div id="summaryType">General Consultation</div>
                                </div>
                                <div class="summary-item mb-3">
                                    <strong>Consultation Fee:</strong>
                                    <div id="summaryFee">$150.00</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <div class="d-flex align-items-start">
                            <i class="ri-information-line me-2 mt-1"></i>
                            <div>
                                <strong>Important Notes:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Please arrive 15 minutes before your appointment time</li>
                                    <li>Bring a valid ID and insurance card (if applicable)</li>
                                    <li>You can reschedule or cancel up to 24 hours before the appointment</li>
                                    <li>A confirmation email will be sent to your registered email address</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <button type="button" class="btn btn-outline-secondary" id="prevBtn" style="display: none;">
                <i class="ri-arrow-left-line me-1"></i>Previous
            </button>
            <button type="button" class="btn btn-primary" id="nextBtn">
                Next <i class="ri-arrow-right-line ms-1"></i>
            </button>
            <button type="button" class="btn btn-success" id="confirmBtn" style="display: none;">
                <i class="ri-check-line me-1"></i>Confirm Appointment
            </button>
        </div>
    </div>

    <div class="col-xl-4">
        <!-- Selected Doctor Info -->
        <div class="card mb-3" id="selectedDoctorCard" style="display: none;">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="ri-user-line me-2"></i>Selected Doctor
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <img src="~/theme/images/doctor1.png" class="img-4x rounded-circle mb-2" alt="Doctor" id="selectedDoctorImage">
                    <h6 id="selectedDoctorName">Dr. Sarah Johnson</h6>
                    <p class="text-muted mb-0" id="selectedDoctorSpecialty">Cardiologist</p>
                </div>
                <div class="doctor-details">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Experience:</span>
                        <span id="selectedDoctorExperience">15 years</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Rating:</span>
                        <span id="selectedDoctorRating">4.9/5</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Consultation Fee:</span>
                        <span id="selectedDoctorFee">$150</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Location:</span>
                        <span id="selectedDoctorLocation">City Medical Center</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointment Summary -->
        <div class="card mb-3" id="appointmentSummaryCard" style="display: none;">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="ri-calendar-check-line me-2"></i>Appointment Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="summary-item mb-2">
                    <strong>Date:</strong>
                    <div id="sidebarDate">-</div>
                </div>
                <div class="summary-item mb-2">
                    <strong>Time:</strong>
                    <div id="sidebarTime">-</div>
                </div>
                <div class="summary-item mb-2">
                    <strong>Type:</strong>
                    <div id="sidebarType">-</div>
                </div>
                <hr>
                <div class="summary-item">
                    <strong>Total Fee:</strong>
                    <div class="text-success fw-bold" id="sidebarTotal">$150.00</div>
                </div>
            </div>
        </div>

        <!-- Help & Support -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="ri-customer-service-line me-2"></i>Need Help?
                </h5>
            </div>
            <div class="card-body">
                <div class="help-item mb-3">
                    <h6 class="mb-1">Can't find the right doctor?</h6>
                    <p class="text-muted mb-2">Our support team can help you find the perfect specialist for your needs.</p>
                    <button class="btn btn-sm btn-outline-primary">Contact Support</button>
                </div>
                <div class="help-item mb-3">
                    <h6 class="mb-1">Emergency?</h6>
                    <p class="text-muted mb-2">For urgent medical needs, call our emergency hotline.</p>
                    <button class="btn btn-sm btn-outline-danger">Emergency: 911</button>
                </div>
                <div class="help-item">
                    <h6 class="mb-1">Technical Issues?</h6>
                    <p class="text-muted mb-2">Having trouble with the booking system?</p>
                    <button class="btn btn-sm btn-outline-info">Get Help</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let currentStep = 1;
            let selectedDoctor = null;
            let selectedDate = null;
            let selectedTime = null;
            
            // Doctor availability data (in real app, this would come from backend)
            const doctorAvailability = {
                '1': { // Dr. Sarah Johnson
                    days: [1, 2, 3, 4, 5], // Mon-Fri (0=Sun, 1=Mon, etc.)
                    times: ['09:00', '10:00', '14:00', '15:00']
                },
                '2': { // Dr. Michael Brown
                    days: [1, 3, 5, 6], // Mon, Wed, Fri, Sat
                    times: ['08:00', '11:00', '13:00', '16:00']
                },
                '3': { // Dr. Lisa Anderson
                    days: [2, 4, 5, 6], // Tue, Thu, Fri, Sat
                    times: ['10:00', '12:00', '15:00', '17:00']
                }
            };
            
            // Step navigation
            function showStep(step) {
                // Hide all steps
                document.querySelectorAll('.booking-step').forEach(s => s.style.display = 'none');
                document.querySelectorAll('.step').forEach(s => s.classList.remove('active'));
                
                // Show current step
                document.getElementById(`step${step}`).style.display = 'block';
                document.querySelector(`[data-step="${step}"]`).classList.add('active');
                
                // Update navigation buttons
                document.getElementById('prevBtn').style.display = step > 1 ? 'block' : 'none';
                document.getElementById('nextBtn').style.display = step < 4 ? 'block' : 'none';
                document.getElementById('confirmBtn').style.display = step === 4 ? 'block' : 'none';
                
                currentStep = step;
            }
            
            // Filter doctors by search and specialization
            window.filterDoctors = function() {
                const searchTerm = document.getElementById('searchDoctor').value.toLowerCase();
                const specialty = document.getElementById('specializationFilter').value;
                
                let visibleCount = 0;
                
                document.querySelectorAll('.doctor-card').forEach(card => {
                    const doctorName = card.dataset.name.toLowerCase();
                    const doctorSpecialty = card.dataset.specialty;
                    
                    const matchesSearch = searchTerm === '' || doctorName.includes(searchTerm) || doctorSpecialty.toLowerCase().includes(searchTerm);
                    const matchesSpecialty = specialty === '' || doctorSpecialty === specialty;
                    
                    if (matchesSearch && matchesSpecialty) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });
                
                console.log(`${visibleCount} doctors visible after filtering`);
            };
            
            // Filter doctors by datetime availability
            window.filterDoctorsByDateTime = function() {
                const selectedDateTime = document.getElementById('availabilityFilter').value;
                
                if (!selectedDateTime) {
                    // If no date selected, show all doctors
                    document.querySelectorAll('.doctor-card').forEach(card => {
                        card.style.display = 'block';
                    });
                    return;
                }
                
                const selectedDate = new Date(selectedDateTime);
                const selectedDay = selectedDate.getDay();
                const selectedTime = selectedDateTime.split('T')[1]; // Get time part (HH:MM)
                
                document.querySelectorAll('.doctor-card').forEach(card => {
                    const doctorId = card.dataset.doctorId;
                    const availability = doctorAvailability[doctorId];
                    
                    if (!availability) {
                        card.style.display = 'none';
                        return;
                    }
                    
                    // Check if doctor is available on selected day
                    const isDayAvailable = availability.days.includes(selectedDay);
                    
                    // Check if doctor is available at selected time
                    const isTimeAvailable = availability.times.some(time => {
                        return selectedTime >= time && selectedTime < addHour(time);
                    });
                    
                    if (isDayAvailable && isTimeAvailable) {
                        card.style.display = 'block';
                        // Highlight matching availability
                        card.style.border = '2px solid #28a745';
                    } else {
                        card.style.display = 'none';
                    }
                });
            };
            
            // Helper function to add an hour to time
            function addHour(time) {
                const [hours, minutes] = time.split(':');
                const newHours = (parseInt(hours) + 1).toString().padStart(2, '0');
                return `${newHours}:${minutes}`;
            }
            
            // Clear date filter
            window.clearDateFilter = function() {
                document.getElementById('availabilityFilter').value = '';
                document.querySelectorAll('.doctor-card').forEach(card => {
                    card.style.display = 'block';
                    card.style.border = '';
                });
                filterDoctors(); // Re-apply other filters
            };
            
            // Show appointment history modal
            document.getElementById('showHistoryBtn').addEventListener('click', function() {
                // Create and show history modal
                const historyModal = `
                    <div class="modal fade" id="historyModal" tabindex="-1">
                        <div class="modal-dialog modal-lg modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">
                                        <i class="ri-history-line me-2"></i>Appointment History
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Doctor</th>
                                                    <th>Type</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Nov 10, 2024</td>
                                                    <td>Dr. Sarah Johnson</td>
                                                    <td>Consultation</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td><a href="/Patient/AppointmentDetails?id=1" class="btn btn-sm btn-outline-primary">View</a></td>
                                                </tr>
                                                <tr>
                                                    <td>Oct 25, 2024</td>
                                                    <td>Dr. Michael Brown</td>
                                                    <td>Follow-up</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td><a href="/Patient/AppointmentDetails?id=2" class="btn btn-sm btn-outline-primary">View</a></td>
                                                </tr>
                                                <tr>
                                                    <td>Oct 15, 2024</td>
                                                    <td>Dr. Lisa Anderson</td>
                                                    <td>Checkup</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td><a href="/Patient/AppointmentDetails?id=3" class="btn btn-sm btn-outline-primary">View</a></td>
                                                </tr>
                                                <tr>
                                                    <td>Sep 20, 2024</td>
                                                    <td>Dr. Sarah Johnson</td>
                                                    <td>Consultation</td>
                                                    <td><span class="badge bg-danger">Cancelled</span></td>
                                                    <td><a href="/Patient/AppointmentDetails?id=4" class="btn btn-sm btn-outline-primary">View</a></td>
                                                </tr>
                                                <tr>
                                                    <td>Aug 30, 2024</td>
                                                    <td>Dr. Michael Brown</td>
                                                    <td>Consultation</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td><a href="/Patient/AppointmentDetails?id=5" class="btn btn-sm btn-outline-primary">View</a></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                // Remove existing modal if any
                const existingModal = document.getElementById('historyModal');
                if (existingModal) {
                    existingModal.remove();
                }
                
                // Add modal to body
                document.body.insertAdjacentHTML('beforeend', historyModal);
                
                // Show modal
                const modal = new bootstrap.Modal(document.getElementById('historyModal'));
                modal.show();
                
                // Clean up when modal is hidden
                document.getElementById('historyModal').addEventListener('hidden.bs.modal', function() {
                    this.remove();
                });
            });
            
            // Doctor selection
            function attachDoctorClickHandlers() {
                document.querySelectorAll('.doctor-card').forEach(card => {
                    card.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        // Remove selection from all cards
                        document.querySelectorAll('.doctor-card').forEach(c => c.classList.remove('selected'));
                        
                        // Add selection to clicked card
                        this.classList.add('selected');
                        
                        // Extract doctor information
                        const doctorNameEl = this.querySelector('h5');
                        const doctorInfoEl = this.querySelector('p.text-muted');
                        const doctorFeeEl = this.querySelector('.doctor-info');
                        
                        selectedDoctor = {
                            id: this.dataset.doctorId,
                            name: doctorNameEl ? doctorNameEl.textContent : '',
                            specialty: doctorInfoEl ? doctorInfoEl.textContent.split('|')[0].trim() : '',
                            experience: doctorInfoEl ? doctorInfoEl.textContent.split('|')[1].trim() : '',
                            fee: doctorFeeEl ? doctorFeeEl.textContent.match(/\$\d+/)[0] : '$0'
                        };
                        
                        console.log('Doctor selected:', selectedDoctor);
                        
                        // Update selected doctor card in sidebar
                        document.getElementById('selectedDoctorCard').style.display = 'block';
                        document.getElementById('selectedDoctorName').textContent = selectedDoctor.name;
                        document.getElementById('selectedDoctorSpecialty').textContent = selectedDoctor.specialty;
                        document.getElementById('selectedDoctorFee').textContent = selectedDoctor.fee;
                    });
                });
            }
            
            // Attach handlers initially
            attachDoctorClickHandlers();
            
            // Date selection - Load time slots from API
            document.getElementById('appointmentDate').addEventListener('change', async function() {
                selectedDate = this.value;
                const timeSlots = document.getElementById('timeSlots');
                
                if (!selectedDoctor || !selectedDoctor.id) {
                    timeSlots.innerHTML = '<div class="text-muted"><i class="ri-information-line me-1"></i>Please select a doctor first</div>';
                    return;
                }
                
                // Show loading
                timeSlots.innerHTML = '<div class="text-center"><div class="spinner-border spinner-border-sm text-primary me-2"></div>Loading available time slots...</div>';
                
                try {
                    // Call API to get available time slots
                    const response = await fetch(`/Patient/BookAppointment?handler=TimeSlots&doctorId=${selectedDoctor.id}&date=${selectedDate}`);
                    
                    if (!response.ok) {
                        throw new Error('Failed to load time slots');
                    }
                    
                    const slots = await response.json();
                    
                    timeSlots.innerHTML = '';
                    
                    if (slots && slots.length > 0) {

                        console.log("avilable slots",slots)
                        const availableSlots = slots.filter(s => s.isAvailable);
                        
                        if (availableSlots.length === 0) {
                            timeSlots.innerHTML = '<div class="alert alert-warning"><i class="ri-calendar-close-line me-1"></i>No available time slots for this date. Please select another date.</div>';
                            return;
                        }
                        
                        availableSlots.forEach(slot => {
                            const slotBtn = document.createElement('button');
                            slotBtn.type = 'button';
                            slotBtn.className = 'btn btn-outline-primary me-2 mb-2 time-slot';
                            slotBtn.textContent = slot.time;
                            slotBtn.addEventListener('click', function() {
                                document.querySelectorAll('.time-slot').forEach(s => {
                                    s.classList.remove('btn-primary');
                                    s.classList.add('btn-outline-primary');
                                });
                                this.classList.remove('btn-outline-primary');
                                this.classList.add('btn-primary');
                                selectedTime = slot.time;
                                
                                // Update sidebar
                                document.getElementById('sidebarDate').textContent = new Date(selectedDate).toLocaleDateString();
                                document.getElementById('sidebarTime').textContent = selectedTime;
                                document.getElementById('appointmentSummaryCard').style.display = 'block';
                            });
                            timeSlots.appendChild(slotBtn);
                        });
                    } else {
                        timeSlots.innerHTML = '<div class="text-muted"><i class="ri-information-line me-1"></i>No time slots available for this date</div>';
                    }
                } catch (error) {
                    console.error('Error loading time slots:', error);
                    timeSlots.innerHTML = '<div class="alert alert-danger"><i class="ri-error-warning-line me-1"></i>Error loading time slots. Please try again.</div>';
                }
            });
            
            // Navigation buttons
            document.getElementById('nextBtn').addEventListener('click', function() {
                console.log('Next button clicked. Current step:', currentStep);
                console.log('Selected doctor:', selectedDoctor);
                
                // Step 1: Validate doctor selection
                if (currentStep === 1) {
                    // Check both the variable and if any card has 'selected' class
                    const hasSelectedCard = document.querySelector('.doctor-card.selected');
                    
                    if (!selectedDoctor && !hasSelectedCard) {
                        alert('Please select a doctor by clicking on one of the doctor cards.');
                        return;
                    }
                    
                    // If a card is selected but variable is not set, try to set it
                    if (!selectedDoctor && hasSelectedCard) {
                        const doctorNameEl = hasSelectedCard.querySelector('h5');
                        const doctorInfoEl = hasSelectedCard.querySelector('p.text-muted');
                        const doctorFeeEl = hasSelectedCard.querySelector('.doctor-info');
                        
                        selectedDoctor = {
                            id: hasSelectedCard.dataset.doctorId,
                            name: doctorNameEl ? doctorNameEl.textContent : '',
                            specialty: doctorInfoEl ? doctorInfoEl.textContent.split('|')[0].trim() : '',
                            experience: doctorInfoEl ? doctorInfoEl.textContent.split('|')[1].trim() : '',
                            fee: doctorFeeEl ? doctorFeeEl.textContent.match(/\$\d+/)[0] : '$0'
                        };
                        console.log('Doctor info extracted from selected card:', selectedDoctor);
                    }
                }
                
                // Step 2: Validate date and time
                if (currentStep === 2 && (!selectedDate || !selectedTime)) {
                    alert('Please select both a date and a time slot.');
                    return;
                }
                
                // Step 3: Validate form and update summary
                if (currentStep === 3) {
                    const form = document.querySelector('#step3 form');
                    if (!form.checkValidity()) {
                        form.reportValidity();
                        return;
                    }
                    
                    // Update summary
                    document.getElementById('summaryDoctor').textContent = selectedDoctor.name;
                    document.getElementById('summarySpecialization').textContent = selectedDoctor.specialty;
                    document.getElementById('summaryDate').textContent = new Date(selectedDate).toLocaleDateString();
                    document.getElementById('summaryTime').textContent = selectedTime;
                    document.getElementById('summaryType').textContent = form.querySelector('select').selectedOptions[0].text;
                    document.getElementById('summaryFee').textContent = selectedDoctor.fee + '.00';
                }
                
                showStep(currentStep + 1);
                
                // Scroll to top of page smoothly when moving to next step
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
            
            document.getElementById('prevBtn').addEventListener('click', function() {
                showStep(currentStep - 1);
                // Scroll to top of page smoothly when moving to previous step
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
            
            // Confirm appointment
            document.getElementById('confirmBtn').addEventListener('click', async function() {
                const btn = this;
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Booking...';
                
                try {
                    // Get form data
                    const form = document.querySelector('#step3 form');
                    const appointmentType = form.querySelector('select').value;
                    const reason = form.querySelectorAll('textarea')[0].value;
                    const medications = form.querySelectorAll('textarea')[1].value;
                    const allergies = form.querySelector('input[type="text"]').value;
                    const useInsurance = document.getElementById('insuranceCheck').checked;
                    const sendReminders = document.getElementById('reminderCheck').checked;
                    
                    // Prepare booking request
                    const bookingData = {
                        doctorID: parseInt(selectedDoctor.id),
                        appointmentDate: selectedDate,
                        appointmentTime: selectedTime,
                        appointmentType: appointmentType,
                        reason: reason,
                        currentMedications: medications || null,
                        allergies: allergies || null,
                        useInsurance: useInsurance,
                        sendReminders: sendReminders
                    };
                    
                    console.log('Booking appointment:', bookingData);
                    
                    // Get anti-forgery token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    
                    // Call API
                    const response = await fetch('/Patient/BookAppointment?handler=BookAppointment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token || ''
                        },
                        body: JSON.stringify(bookingData)
                    });
                    
                    console.log('Response status:', response.status);
                    
                    // Check if response has content
                    const contentType = response.headers.get('content-type');
                    let result;
                    
                    if (contentType && contentType.includes('application/json')) {
                        result = await response.json();
                    } else {
                        const text = await response.text();
                        console.error('Non-JSON response:', text);
                        throw new Error('Invalid response from server');
                    }
                    
                    console.log('Booking result:', result);
                    
                    if (response.ok && result.success) {
                        // Show success message
                        alert(result.message || 'Appointment booked successfully! You will receive a confirmation email shortly.');
                        window.location.href = '/Patient/Appointments';
                    } else {
                        // Show error message
                        alert(result.message || 'Failed to book appointment. Please try again.');
                        btn.disabled = false;
                        btn.innerHTML = '<i class="ri-check-line me-1"></i>Confirm Appointment';
                    }
                } catch (error) {
                    console.error('Error booking appointment:', error);
                    alert('An error occurred while booking the appointment. Please try again.');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="ri-check-line me-1"></i>Confirm Appointment';
                }
            });
            
            // Handle pre-selected doctor from URL
            const urlParams = new URLSearchParams(window.location.search);
            const preselectedDoctorId = urlParams.get('doctorId');
            
            if (preselectedDoctorId) {
                // Find and auto-select the doctor
                const doctorCard = document.querySelector(`[data-doctor-id="${preselectedDoctorId}"]`);
                if (doctorCard) {
                    // Simulate click to select doctor
                    setTimeout(() => {
                        doctorCard.click();
                        // Scroll to the selected doctor
                        doctorCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }, 500);
                }
            }
            
            // Initialize
            showStep(1);
        });
    </script>
    
