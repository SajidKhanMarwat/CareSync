@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let currentStep = 1;
            let selectedDoctor = null;
            let selectedDate = null;
            let selectedTime = null;
            
            // Doctor availability data (in real app, this would come from backend)
            const doctorAvailability = {
                '1': { // Dr. Sarah Johnson
                    days: [1, 2, 3, 4, 5], // Mon-Fri (0=Sun, 1=Mon, etc.)
                    times: ['09:00', '10:00', '14:00', '15:00']
                },
                '2': { // Dr. Michael Brown
                    days: [1, 3, 5, 6], // Mon, Wed, Fri, Sat
                    times: ['08:00', '11:00', '13:00', '16:00']
                },
                '3': { // Dr. Lisa Anderson
                    days: [2, 4, 5, 6], // Tue, Thu, Fri, Sat
                    times: ['10:00', '12:00', '15:00', '17:00']
                }
            };
            
            // Step navigation
            function showStep(step) {
                // Hide all steps
                document.querySelectorAll('.booking-step').forEach(s => s.style.display = 'none');
                document.querySelectorAll('.step').forEach(s => s.classList.remove('active'));
                
                // Show current step
                document.getElementById(`step${step}`).style.display = 'block';
                document.querySelector(`[data-step="${step}"]`).classList.add('active');
                
                // Update navigation buttons
                document.getElementById('prevBtn').style.display = step > 1 ? 'block' : 'none';
                document.getElementById('nextBtn').style.display = step < 4 ? 'block' : 'none';
                document.getElementById('confirmBtn').style.display = step === 4 ? 'block' : 'none';
                
                currentStep = step;
            }
            
            // Filter doctors by search and specialization
            window.filterDoctors = function() {
                const searchTerm = document.getElementById('searchDoctor').value.toLowerCase();
                const specialty = document.getElementById('specializationFilter').value;
                
                let visibleCount = 0;
                
                document.querySelectorAll('.doctor-card').forEach(card => {
                    const doctorName = card.dataset.name.toLowerCase();
                    const doctorSpecialty = card.dataset.specialty;
                    
                    const matchesSearch = searchTerm === '' || doctorName.includes(searchTerm) || doctorSpecialty.toLowerCase().includes(searchTerm);
                    const matchesSpecialty = specialty === '' || doctorSpecialty === specialty;
                    
                    if (matchesSearch && matchesSpecialty) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });
                
                console.log(`${visibleCount} doctors visible after filtering`);
            };
            
            // Filter doctors by datetime availability
            window.filterDoctorsByDateTime = function() {
                const selectedDateTime = document.getElementById('availabilityFilter').value;
                
                if (!selectedDateTime) {
                    // If no date selected, show all doctors
                    document.querySelectorAll('.doctor-card').forEach(card => {
                        card.style.display = 'block';
                    });
                    return;
                }
                
                const selectedDate = new Date(selectedDateTime);
                const selectedDay = selectedDate.getDay();
                const selectedTime = selectedDateTime.split('T')[1]; // Get time part (HH:MM)
                
                document.querySelectorAll('.doctor-card').forEach(card => {
                    const doctorId = card.dataset.doctorId;
                    const availability = doctorAvailability[doctorId];
                    
                    if (!availability) {
                        card.style.display = 'none';
                        return;
                    }
                    
                    // Check if doctor is available on selected day
                    const isDayAvailable = availability.days.includes(selectedDay);
                    
                    // Check if doctor is available at selected time
                    const isTimeAvailable = availability.times.some(time => {
                        return selectedTime >= time && selectedTime < addHour(time);
                    });
                    
                    if (isDayAvailable && isTimeAvailable) {
                        card.style.display = 'block';
                        // Highlight matching availability
                        card.style.border = '2px solid #28a745';
                    } else {
                        card.style.display = 'none';
                    }
                });
            };
            
            // Helper function to add an hour to time
            function addHour(time) {
                const [hours, minutes] = time.split(':');
                const newHours = (parseInt(hours) + 1).toString().padStart(2, '0');
                return `${newHours}:${minutes}`;
            }
            
            // Clear date filter
            window.clearDateFilter = function() {
