                    // If a card is selected but variable is not set, try to set it
                    if (!selectedDoctor && hasSelectedCard) {
                        const doctorNameEl = hasSelectedCard.querySelector('h5');
                        const doctorInfoEl = hasSelectedCard.querySelector('p.text-muted');
                        const doctorFeeEl = hasSelectedCard.querySelector('.doctor-info');
                        
                        selectedDoctor = {
