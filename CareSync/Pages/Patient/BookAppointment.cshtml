                            specialty: doctorInfoEl ? doctorInfoEl.textContent.split('|')[0].trim() : '',
                            experience: doctorInfoEl ? doctorInfoEl.textContent.split('|')[1].trim() : '',
                            fee: doctorFeeEl ? doctorFeeEl.textContent.match(/\$\d+/)[0] : '$0'
