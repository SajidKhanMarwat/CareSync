@page "/Patient/Appointments/Create"
@model CareSync.Pages.Patient.CreateAppointmentModel
@{
    ViewData["Title"] = "Create Appointment";
}

@section PageActions {
    <div class="d-flex gap-2">
        <a href="/Patient/Appointments/All" class="btn btn-outline-secondary">
            <i class="ri-arrow-left-line me-2"></i>Back to Appointments
        </a>
        <button class="btn btn-outline-info" onclick="viewAvailability()">
            <i class="ri-calendar-check-line me-2"></i>Check Availability
        </button>
    </div>
}

<!-- Appointment Type Selection -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-stethoscope-line me-2"></i>Select Appointment Type
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card border appointment-type-card" onclick="selectAppointmentType('consultation')">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="ri-user-star-line text-primary" style="font-size: 2.5rem;"></i>
                                </div>
                                <h5 class="card-title">General Consultation</h5>
                                <p class="card-text text-muted">Regular checkup and consultation</p>
                                <span class="badge bg-primary-subtle text-primary">30-45 minutes</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border appointment-type-card" onclick="selectAppointmentType('followup')">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="ri-calendar-check-line text-success" style="font-size: 2.5rem;"></i>
                                </div>
                                <h5 class="card-title">Follow-up Visit</h5>
                                <p class="card-text text-muted">Follow-up on previous treatment</p>
                                <span class="badge bg-success-subtle text-success">15-30 minutes</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border appointment-type-card" onclick="selectAppointmentType('specialist')">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="ri-microscope-line text-info" style="font-size: 2.5rem;"></i>
                                </div>
                                <h5 class="card-title">Specialist Consultation</h5>
                                <p class="card-text text-muted">Specialized medical consultation</p>
                                <span class="badge bg-info-subtle text-info">45-60 minutes</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

