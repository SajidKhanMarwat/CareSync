@page "/Dashboard"
@model CareSync.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

@section PageActions {
    <button class="btn btn-primary">
        <i class="ri-add-line me-2"></i>Quick Action
    </button>
}

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h2 class="card-title">Welcome back, Dr. Admin!</h2>
                        <p class="card-text">Here's what's happening at CareSync today.</p>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <h4>23</h4>
                                    <small>Appointments Today</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <h4>8</h4>
                                    <small>Pending Reviews</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <h4>156</h4>
                                    <small>Active Patients</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-user-heart-line text-primary" style="font-size: 2rem;"></i>
                </div>
                <h3 class="card-title">1,247</h3>
                <p class="card-text text-muted">Total Patients</p>
                <small class="text-success">+12% <i class="ri-arrow-up-line"></i></small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-calendar-check-line text-success" style="font-size: 2rem;"></i>
                </div>
                <h3 class="card-title">23</h3>
                <p class="card-text text-muted">Today's Appointments</p>
                <small class="text-success">+5 <i class="ri-arrow-up-line"></i></small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-test-tube-line text-info" style="font-size: 2rem;"></i>
                </div>
                <h3 class="card-title">8</h3>
                <p class="card-text text-muted">Pending Lab Results</p>
                <small class="text-danger">-3 <i class="ri-arrow-down-line"></i></small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-medicine-bottle-line text-warning" style="font-size: 2rem;"></i>
                </div>
                <h3 class="card-title">156</h3>
                <p class="card-text text-muted">Active Prescriptions</p>
                <small class="text-success">+8% <i class="ri-arrow-up-line"></i></small>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Left Column -->
    <div class="col-xl-8 col-lg-7">
        
        <!-- Recent Appointments -->
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">
                        <i class="ri-calendar-line me-2"></i>
                        Today's Appointments
                    </h5>
                    <a href="/Appointments" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="me-3">
                            <div class="fw-bold">09:00 AM</div>
                            <small class="text-muted">30 min</small>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">John Doe</h6>
                            <p class="text-muted mb-1">Regular Checkup</p>
                            <small class="text-success">
                                <i class="ri-user-star-line me-1"></i>Dr. Smith
                            </small>
                        </div>
                        <span class="badge bg-success">Confirmed</span>
                    </div>
                    
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="me-3">
                            <div class="fw-bold">10:30 AM</div>
                            <small class="text-muted">45 min</small>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Sarah Johnson</h6>
                            <p class="text-muted mb-1">Follow-up Consultation</p>
                            <small class="text-success">
                                <i class="ri-user-star-line me-1"></i>Dr. Wilson
                            </small>
                        </div>
                        <span class="badge bg-warning">Pending</span>
                    </div>
                    
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="me-3">
                            <div class="fw-bold">02:00 PM</div>
                            <small class="text-muted">60 min</small>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Michael Brown</h6>
                            <p class="text-muted mb-1">Specialist Consultation</p>
                            <small class="text-success">
                                <i class="ri-user-star-line me-1"></i>Dr. Davis
                            </small>
                        </div>
                        <span class="badge bg-info">In Progress</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Recent Lab Results -->
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">
                        <i class="ri-test-tube-line me-2"></i>
                        Recent Lab Results
                    </h5>
                    <a href="/Lab/Reports" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex align-items-center">
                        <div class="me-3">
                            <i class="ri-heart-pulse-line text-danger" style="font-size: 1.5rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Blood Test - Complete Panel</h6>
                            <p class="text-muted mb-1">Patient: Emma Wilson</p>
                            <small class="text-muted">Completed: 2 hours ago</small>
                        </div>
                        <span class="badge bg-success">Normal</span>
                    </div>
                    
                    <div class="list-group-item d-flex align-items-center">
                        <div class="me-3">
                            <i class="ri-microscope-line text-info" style="font-size: 1.5rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Urine Analysis</h6>
                            <p class="text-muted mb-1">Patient: Robert Taylor</p>
                            <small class="text-muted">Completed: 4 hours ago</small>
                        </div>
                        <span class="badge bg-warning">Review Required</span>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
    <!-- Right Column -->
    <div class="col-xl-4 col-lg-5">
        
        <!-- System Bulletins -->
        <div class="mb-4">
            <h5 class="mb-3">
                <i class="ri-megaphone-line me-2"></i>
                System Bulletins
            </h5>
            
            <div class="card mb-3 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="ri-tools-line text-warning" style="font-size: 1.5rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="card-title">System Maintenance Scheduled</h6>
                            <p class="card-text">Scheduled maintenance will occur tonight from 11:00 PM to 2:00 AM. Some services may be temporarily unavailable.</p>
                            <small class="text-muted">System Administrator</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-3 border-success">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="ri-hospital-line text-success" style="font-size: 1.5rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="card-title">New Lab Equipment Available</h6>
                            <p class="card-text">The new MRI machine is now operational and available for patient appointments. Contact the lab department for scheduling.</p>
                            <small class="text-muted">Lab Department</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-flashlight-line me-2"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <a href="/Patients/Create" class="btn btn-outline-primary w-100 text-center py-3">
                            <div class="mb-2">
                                <i class="ri-user-add-line" style="font-size: 1.5rem;"></i>
                            </div>
                            <small>Add Patient</small>
                        </a>
                    </div>
                    
                    <div class="col-6">
                        <a href="/Appointments/Create" class="btn btn-outline-success w-100 text-center py-3">
                            <div class="mb-2">
                                <i class="ri-calendar-check-line" style="font-size: 1.5rem;"></i>
                            </div>
                            <small>Book Appointment</small>
                        </a>
                    </div>
                    
                    <div class="col-6">
                        <a href="/Prescriptions/Create" class="btn btn-outline-info w-100 text-center py-3">
                            <div class="mb-2">
                                <i class="ri-medicine-bottle-line" style="font-size: 1.5rem;"></i>
                            </div>
                            <small>New Prescription</small>
                        </a>
                    </div>
                    
                    <div class="col-6">
                        <a href="/Lab/Requests" class="btn btn-outline-warning w-100 text-center py-3">
                            <div class="mb-2">
                                <i class="ri-test-tube-line" style="font-size: 1.5rem;"></i>
                            </div>
                            <small>Lab Request</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

@section Styles {
    <!-- Custom styles can be added here later if needed -->
}

@section Scripts {
    <!-- Custom scripts can be added here later if needed -->
}
