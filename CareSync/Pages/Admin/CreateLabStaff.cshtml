@page "/Admin/CreateLabStaff"
@model CareSync.Pages.Admin.CreateLabStaffModel
@{
    ViewData["Title"] = "Create Lab Staff";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/MedicalStaff">Staff & Patient Management</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            Create Lab Staff
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <a href="~/Admin/MedicalStaff" class="btn btn-outline-secondary">
            <i class="ri-arrow-left-line me-2"></i>Back to Staff
        </a>
        <button class="btn btn-outline-info" onclick="saveDraft()">
            <i class="ri-save-line me-2"></i>Save Draft
        </button>
    </div>
}

<!-- Progress Steps -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="progress-steps">
                    <div class="step active" data-step="1">
                        <div class="step-number">1</div>
                        <div class="step-title">Personal Info</div>
                    </div>
                    <div class="step" data-step="2">
                        <div class="step-number">2</div>
                        <div class="step-title" id="step2Title">Role & Details</div>
                    </div>
                    <div class="step" data-step="3">
                        <div class="step-number">3</div>
                        <div class="step-title">Account Setup</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Form Container -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title" id="stepTitle">Step 1: Personal Information</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="ri-error-warning-line me-2"></i>@Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post" id="labStaffForm">
                    @Html.AntiForgeryToken()
                    
                    <!-- Step 1: Personal Information -->
                    <div class="step-content active" data-step="1">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.FirstName" class="form-control" required />
                                <span asp-validation-for="LabStaffRegistration.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.MiddleName" class="form-label">Middle Name</label>
                                <input asp-for="LabStaffRegistration.MiddleName" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.LastName" class="form-label">Last Name</label>
                                <input asp-for="LabStaffRegistration.LastName" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.DateOfBirth" type="date" class="form-control" required />
                                <span asp-validation-for="LabStaffRegistration.DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.Gender" class="form-label">Gender <span class="text-danger">*</span></label>
                                <select asp-for="LabStaffRegistration.Gender" class="form-select" required>
                                    <option value="">Select Gender</option>
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                    <option value="2">Other</option>
                                </select>
                                <span asp-validation-for="LabStaffRegistration.Gender" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.Email" type="email" class="form-control" required />
                                <span asp-validation-for="LabStaffRegistration.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.PhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.PhoneNumber" type="tel" class="form-control" required />
                                <span asp-validation-for="LabStaffRegistration.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="LabStaffRegistration.UserName" class="form-label">Username <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.UserName" class="form-control" required />
                                <span asp-validation-for="LabStaffRegistration.UserName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="LabStaffRegistration.Address" class="form-label">Address</label>
                                <textarea asp-for="LabStaffRegistration.Address" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Role & Lab Details -->
                    <div class="step-content" data-step="2">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="ri-information-line me-2"></i>
                                    <strong>Role Selection:</strong> Choose <strong>Lab</strong> to create a new laboratory facility or <strong>Lab Assistant</strong> to assign a technician to an existing laboratory.
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <label asp-for="LabStaffRegistration.RoleType" class="form-label">Staff Role <span class="text-danger">*</span></label>
                                <select asp-for="LabStaffRegistration.RoleType" class="form-select" id="roleTypeSelect" onchange="toggleRoleFields()" required>
                                    <option value="">Select Role</option>
                                    <option value="5">Lab (Create New Laboratory Facility)</option>
                                    <option value="4">Lab Assistant (Assign to Existing Laboratory)</option>
                                </select>
                                <span asp-validation-for="LabStaffRegistration.RoleType" class="text-danger"></span>
                            </div>

                            <!-- Lab Assistant selection (shown only for Lab Assistant role) -->
                            <div id="labAssistantFields" style="display: none;">
                                <div class="col-12 mt-3">
                                    <h6 class="text-info"><i class="ri-building-line me-2"></i>Laboratory Assignment</h6>
                                    <hr />
                                </div>
                                
                                <div class="row g-3">
                                    <div class="col-md-12">
                                        <label asp-for="SelectedLabId" class="form-label">Select Laboratory <span class="text-danger">*</span></label>
                                        <select asp-for="SelectedLabId" class="form-select" id="labSelection">
                                            <option value="">-- Select a Laboratory --</option>
                                            @if (Model.AvailableLabs != null && Model.AvailableLabs.Any())
                                            {
                                                @foreach (var lab in Model.AvailableLabs)
                                                {
                                                    <option value="@lab.LabId">@lab.LabName @(!string.IsNullOrEmpty(lab.Location) ? $"- {lab.Location}" : "")</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="SelectedLabId" class="text-danger"></span>
                                        @if (Model.AvailableLabs == null || !Model.AvailableLabs.Any())
                                        {
                                            <small class="text-warning d-block mt-1">
                                                <i class="ri-alert-line"></i> No laboratories available. Please create a Lab facility first before assigning assistants.
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Lab facility fields (shown only for Lab role) -->
                            <div id="labSpecificFields" style="display: none;">
                                <div class="col-12 mt-3">
                                    <h6 class="text-primary"><i class="ri-building-2-line me-2"></i>Laboratory Information</h6>
                                    <hr />
                                </div>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.LabName" class="form-label">Laboratory Name <span class="text-danger">*</span></label>
                                        <input asp-for="LabDetails.LabName" class="form-control" id="labName" />
                                        <span asp-validation-for="LabDetails.LabName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.ArabicLabName" class="form-label">Arabic Lab Name</label>
                                        <input asp-for="LabDetails.ArabicLabName" class="form-control" dir="rtl" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.Email" class="form-label">Lab Email</label>
                                        <input asp-for="LabDetails.Email" type="email" class="form-control" />
                                        <span asp-validation-for="LabDetails.Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.ContactNumber" class="form-label">Lab Contact Number</label>
                                        <input asp-for="LabDetails.ContactNumber" type="tel" class="form-control" />
                                        <span asp-validation-for="LabDetails.ContactNumber" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.LicenseNumber" class="form-label">License Number</label>
                                        <input asp-for="LabDetails.LicenseNumber" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.Location" class="form-label">Location/City</label>
                                        <input asp-for="LabDetails.Location" class="form-control" />
                                    </div>
                                    <div class="col-md-12">
                                        <label asp-for="LabDetails.LabAddress" class="form-label">Laboratory Address</label>
                                        <textarea asp-for="LabDetails.LabAddress" class="form-control" rows="2"></textarea>
                                    </div>
                                    <div class="col-md-12">
                                        <label asp-for="LabDetails.ArabicLabAddress" class="form-label">Arabic Laboratory Address</label>
                                        <textarea asp-for="LabDetails.ArabicLabAddress" class="form-control" rows="2" dir="rtl"></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.OpeningTime" class="form-label">Opening Time</label>
                                        <input asp-for="LabDetails.OpeningTime" type="time" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LabDetails.ClosingTime" class="form-label">Closing Time</label>
                                        <input asp-for="LabDetails.ClosingTime" type="time" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3: Account Setup -->
                    <div class="step-content" data-step="3">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    <i class="ri-shield-keyhole-line me-2"></i>
                                    <strong>Security Notice:</strong> User will be required to change their password on first login.
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="LabStaffRegistration.ArabicUserName" class="form-label">Arabic Name <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.ArabicUserName" class="form-control" dir="rtl" required />
                                <span asp-validation-for="LabStaffRegistration.ArabicUserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LabStaffRegistration.ArabicFirstName" class="form-label">Arabic First Name <span class="text-danger">*</span></label>
                                <input asp-for="LabStaffRegistration.ArabicFirstName" class="form-control" dir="rtl" required />
                                <span asp-validation-for="LabStaffRegistration.ArabicFirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LabStaffRegistration.ArabicLastName" class="form-label">Arabic Last Name</label>
                                <input asp-for="LabStaffRegistration.ArabicLastName" class="form-control" dir="rtl" />
                            </div>
                            <div class="col-md-6"></div>
                            
                            <div class="col-md-6">
                                <label asp-for="LabStaffRegistration.Password" class="form-label">Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input asp-for="LabStaffRegistration.Password" type="password" class="form-control" id="password" required />
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password')">
                                        <i class="ri-eye-line" id="password-icon"></i>
                                    </button>
                                </div>
                                <small class="text-muted">Min 6 characters, max 20 characters</small>
                                <span asp-validation-for="LabStaffRegistration.Password" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LabStaffRegistration.ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input asp-for="LabStaffRegistration.ConfirmPassword" type="password" class="form-control" id="confirmPassword" required />
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword')">
                                        <i class="ri-eye-line" id="confirmPassword-icon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="LabStaffRegistration.ConfirmPassword" class="text-danger d-block"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-outline-secondary" id="prevBtn" onclick="changeStep(-1)" style="display: none;">
                            <i class="ri-arrow-left-line me-2"></i>Previous
                        </button>
                        <div class="ms-auto">
                            <button type="button" class="btn btn-primary" id="nextBtn" onclick="changeStep(1)">
                                Next<i class="ri-arrow-right-line ms-2"></i>
                            </button>
                            <button type="submit" class="btn btn-success" id="submitBtn" style="display: none;">
                                <i class="ri-user-add-line me-2"></i>Create Lab Staff
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentStep = 1;
        const totalSteps = 3;

        function changeStep(direction) {
            if (direction === 1 && !validateCurrentStep()) {
                return;
            }

            currentStep += direction;
            
            if (currentStep < 1) currentStep = 1;
            if (currentStep > totalSteps) currentStep = totalSteps;

            updateStepDisplay();
        }

        function updateStepDisplay() {
            // Update progress steps
            document.querySelectorAll('.step').forEach((step, index) => {
                step.classList.toggle('active', index + 1 === currentStep);
                step.classList.toggle('completed', index + 1 < currentStep);
            });

            // Update step content
            document.querySelectorAll('.step-content').forEach((content, index) => {
                content.classList.toggle('active', index + 1 === currentStep);
            });

            // Update step title
            const titles = ['Personal Information', 'Role & Details', 'Account Setup'];
            document.getElementById('stepTitle').textContent = `Step ${currentStep}: ${titles[currentStep - 1]}`;

            // Update navigation buttons
            document.getElementById('prevBtn').style.display = currentStep === 1 ? 'none' : 'inline-block';
            document.getElementById('nextBtn').style.display = currentStep === totalSteps ? 'none' : 'inline-block';
            document.getElementById('submitBtn').style.display = currentStep === totalSteps ? 'inline-block' : 'none';
        }

        function validateCurrentStep() {
            const currentStepContent = document.querySelector(`.step-content[data-step="${currentStep}"]`);
            const requiredFields = currentStepContent.querySelectorAll('[required]:not([style*="display: none"]):not([style*="display:none"])');
            
            for (let field of requiredFields) {
                // Check if field is visible (not in hidden parent)
                if (field.offsetParent === null) continue;
                
                if (!field.value || !field.value.trim()) {
                    field.focus();
                    alert('Please fill in all required fields before proceeding.');
                    return false;
                }
            }

            // Validation for step 2 - check role and lab fields
            if (currentStep === 2) {
                const roleSelect = document.getElementById('roleTypeSelect');
                if (!roleSelect.value) {
                    roleSelect.focus();
                    alert('Please select a staff role.');
                    return false;
                }
                
                // If Lab role selected, validate lab facility information
                if (roleSelect.value === '5') {
                    const labName = document.getElementById('labName');
                    if (!labName || !labName.value.trim()) {
                        if (labName) labName.focus();
                        alert('Laboratory Name is required to create a Lab facility.');
                        return false;
                    }
                }
                
                // If Lab Assistant role selected, validate lab selection
                if (roleSelect.value === '4') {
                    const labSelection = document.getElementById('labSelection');
                    if (!labSelection || !labSelection.value) {
                        if (labSelection) labSelection.focus();
                        alert('Please select a laboratory to assign the Lab Assistant to.');
                        return false;
                    }
                }
            }

            // Validation for step 3 - password matching
            if (currentStep === 3) {
                const password = document.getElementById('password');
                const confirmPassword = document.getElementById('confirmPassword');
                
                if (password.value !== confirmPassword.value) {
                    confirmPassword.focus();
                    alert('Password and Confirm Password do not match.');
                    return false;
                }
                
                if (password.value.length < 6) {
                    password.focus();
                    alert('Password must be at least 6 characters long.');
                    return false;
                }
            }

            return true;
        }

        function toggleRoleFields() {
            const roleSelect = document.getElementById('roleTypeSelect');
            const labFields = document.getElementById('labSpecificFields');
            const labAssistantFields = document.getElementById('labAssistantFields');
            const labNameInput = document.getElementById('labName');
            const labSelection = document.getElementById('labSelection');
            
            if (roleSelect.value === '5') { // Lab role (RoleType.Lab = 5)
                labFields.style.display = 'block';
                labAssistantFields.style.display = 'none';
                if (labNameInput) labNameInput.setAttribute('required', 'required');
                if (labSelection) labSelection.removeAttribute('required');
            } else if (roleSelect.value === '4') { // Lab Assistant role (RoleType.LabAssistant = 4)
                labFields.style.display = 'none';
                labAssistantFields.style.display = 'block';
                if (labNameInput) labNameInput.removeAttribute('required');
                if (labSelection) labSelection.setAttribute('required', 'required');
            } else {
                labFields.style.display = 'none';
                labAssistantFields.style.display = 'none';
                if (labNameInput) labNameInput.removeAttribute('required');
                if (labSelection) labSelection.removeAttribute('required');
            }
        }

        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById(fieldId + '-icon');
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('ri-eye-line');
                icon.classList.add('ri-eye-off-line');
            } else {
                field.type = 'password';
                icon.classList.remove('ri-eye-off-line');
                icon.classList.add('ri-eye-line');
            }
        }

        function saveDraft() {
            alert('Lab staff information saved as draft!');
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize role-based fields visibility
            toggleRoleFields();
        });
    </script>

    <style>
        .progress-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .progress-steps::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 0;
            right: 0;
            height: 2px;
            background: #e9ecef;
            z-index: 1;
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 2;
            background: white;
            padding: 0 10px;
        }

        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-bottom: 8px;
            transition: all 0.3s ease;
        }

        .step.active .step-number {
            background: #0d6efd;
            color: white;
        }

        .step.completed .step-number {
            background: #198754;
            color: white;
        }

        .step-title {
            font-size: 0.875rem;
            text-align: center;
            color: #6c757d;
        }

        .step.active .step-title {
            color: #0d6efd;
            font-weight: 600;
        }

        .step-content {
            display: none;
        }

        .step-content.active {
            display: block;
        }

        .upload-area {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .upload-area:hover {
            border-color: #0d6efd;
            background: #f8f9fa;
        }

        .upload-area i {
            font-size: 2rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .upload-area p {
            margin: 0;
            color: #6c757d;
        }

        .form-check-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
    </style>
}
