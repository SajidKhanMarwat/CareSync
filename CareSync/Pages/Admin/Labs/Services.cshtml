@page "/Admin/Labs/Services"
@model CareSync.Pages.Admin.Labs.ServicesModel
@{
    ViewData["Title"] = "Lab Services Management";
}

<style>
    .avatar-sm {
        width: 48px;
        height: 48px;
    }
    
    .bg-soft {
        background-color: rgba(var(--bs-primary-rgb), 0.1) !important;
    }
    
    .bg-primary.bg-soft {
        background-color: rgba(13, 110, 253, 0.1) !important;
    }
    
    .bg-success.bg-soft {
        background-color: rgba(25, 135, 84, 0.1) !important;
    }
    
    .bg-info.bg-soft {
        background-color: rgba(13, 202, 240, 0.1) !important;
    }
    
    .bg-warning.bg-soft {
        background-color: rgba(255, 193, 7, 0.1) !important;
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">
                        <i class="ri-service-line me-2"></i>Lab Services Management
                    </h4>
                    <p class="text-muted mb-0">Manage laboratory test services and procedures</p>
                </div>
                <div>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                        <i class="ri-add-line me-1"></i>Add New Service
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-sm rounded-circle bg-primary bg-soft text-primary d-flex align-items-center justify-content-center">
                                <i class="ri-service-line fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0 fw-bold text-primary">@Model.TotalServices</h3>
                            <p class="text-muted mb-0 small">Total Services</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-sm rounded-circle bg-success bg-soft text-success d-flex align-items-center justify-content-center">
                                <i class="ri-checkbox-circle-line fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0 fw-bold text-success">@Model.ActiveServices</h3>
                            <p class="text-muted mb-0 small">Active Services</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-sm rounded-circle bg-info bg-soft text-info d-flex align-items-center justify-content-center">
                                <i class="ri-flask-line fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0 fw-bold text-info">@Model.TotalLaboratories</h3>
                            <p class="text-muted mb-0 small">Laboratories</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-sm rounded-circle bg-warning bg-soft text-warning d-flex align-items-center justify-content-center">
                                <i class="ri-money-dollar-circle-line fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0 fw-bold text-warning">@Model.AveragePrice.ToString("C")</h3>
                            <p class="text-muted mb-0 small">Avg Price</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Grid -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <h5 class="card-title mb-0">
                                <i class="ri-test-tube-line me-2"></i>All Lab Services
                            </h5>
                        </div>
                        <div class="col-md-8">
                            <div class="d-flex gap-2 justify-content-end">
                                <div class="d-flex align-items-center">
                                    <label class="me-2 text-muted small mb-0" style="white-space: nowrap;">Show:</label>
                                    <select id="pageSizeSelector" class="form-select form-select-sm" style="width: 80px;" onchange="changePageSize(this.value)">
                                        <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                        <option value="25" selected="@(Model.PageSize == 25)">25</option>
                                        <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                        <option value="100" selected="@(Model.PageSize == 100)">100</option>
                                    </select>
                                </div>
                                <select id="labFilter" class="form-select form-select-sm" style="width: 200px;" onchange="applyFilters()">
                                    <option value="">All Laboratories</option>
                                    @if (Model.AvailableLabs != null)
                                    {
                                        @foreach (var lab in Model.AvailableLabs)
                                        {
                                            <option value="@lab.LabId" selected="@(Model.FilterLabId == lab.LabId)">@lab.LabName</option>
                                        }
                                    }
                                </select>
                                <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search services..." style="width: 250px;" value="@Model.SearchTerm">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Services == null || !Model.Services.Any())
                    {
                        <div class="text-center py-5">
                            <i class="ri-service-line" style="font-size: 4rem; color: #ddd;"></i>
                            <p class="text-muted mt-3 mb-0">No services found. Click "Add New Service" to create one.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle" id="servicesTable">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 20%;">Service Name</th>
                                        <th style="width: 15%;">Laboratory</th>
                                        <th style="width: 12%;">Category</th>
                                        <th style="width: 10%;">Sample Type</th>
                                        <th style="width: 10%;">Price</th>
                                        <th style="width: 10%;">Time</th>
                                        <th style="width: 8%;">Status</th>
                                        <th style="width: 10%;" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model.Services)
                                    {
                                        <tr data-lab-id="@service.LabId">
                                            <td>
                                                <span class="fw-bold text-primary">#@service.LabServiceId</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@service.ServiceName</strong>
                                                    @if (!string.IsNullOrEmpty(service.Description))
                                                    {
                                                        <br/><small class="text-muted">@service.Description</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <i class="ri-flask-line me-1"></i>@service.LabName
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(service.Category))
                                                {
                                                    <span class="badge bg-info">@service.Category</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(service.SampleType))
                                                {
                                                    <i class="ri-drop-line me-1"></i>@service.SampleType
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td>
                                                @if (service.Price.HasValue)
                                                {
                                                    <strong class="text-success">@service.Price.Value.ToString("C")</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(service.EstimatedTime))
                                                {
                                                    <i class="ri-time-line me-1"></i>@service.EstimatedTime
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td>
                                                @if (service.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-page="/Admin/Labs/ServiceDetails" asp-route-serviceId="@service.LabServiceId" 
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="ri-eye-line"></i>
                                                    </a>
                                                    <a asp-page="/Admin/Labs/EditService" asp-route-serviceId="@service.LabServiceId" 
                                                       class="btn btn-outline-primary" title="Edit">
                                                        <i class="ri-edit-line"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            onclick="confirmDelete(@service.LabServiceId, '@service.ServiceName')" title="Delete">
                                                        <i class="ri-delete-bin-line"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <div class="text-muted">
                                    Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)) of @Model.TotalCount services
                                </div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination mb-0">
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize@(Model.FilterLabId.HasValue ? $"&labId={Model.FilterLabId}" : "")@(!string.IsNullOrEmpty(Model.FilterCategory) ? $"&category={Model.FilterCategory}" : "")@(!string.IsNullOrEmpty(Model.SearchTerm) ? $"&search={Model.SearchTerm}" : "")">Previous</a>
                                        </li>
                                        
                                        @if (Model.CurrentPage > 3)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=1&pageSize=@Model.PageSize@(Model.FilterLabId.HasValue ? $"&labId={Model.FilterLabId}" : "")@(!string.IsNullOrEmpty(Model.FilterCategory) ? $"&category={Model.FilterCategory}" : "")@(!string.IsNullOrEmpty(Model.SearchTerm) ? $"&search={Model.SearchTerm}" : "")">1</a>
                                            </li>
                                            @if (Model.CurrentPage > 4)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                        }
                                        
                                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                        {
                                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="?page=@i&pageSize=@Model.PageSize@(Model.FilterLabId.HasValue ? $"&labId={Model.FilterLabId}" : "")@(!string.IsNullOrEmpty(Model.FilterCategory) ? $"&category={Model.FilterCategory}" : "")@(!string.IsNullOrEmpty(Model.SearchTerm) ? $"&search={Model.SearchTerm}" : "")">@i</a>
                                            </li>
                                        }
                                        
                                        @if (Model.CurrentPage < Model.TotalPages - 2)
                                        {
                                            @if (Model.CurrentPage < Model.TotalPages - 3)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@Model.TotalPages&pageSize=@Model.PageSize@(Model.FilterLabId.HasValue ? $"&labId={Model.FilterLabId}" : "")@(!string.IsNullOrEmpty(Model.FilterCategory) ? $"&category={Model.FilterCategory}" : "")@(!string.IsNullOrEmpty(Model.SearchTerm) ? $"&search={Model.SearchTerm}" : "")">@Model.TotalPages</a>
                                            </li>
                                        }
                                        
                                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize@(Model.FilterLabId.HasValue ? $"&labId={Model.FilterLabId}" : "")@(!string.IsNullOrEmpty(Model.FilterCategory) ? $"&category={Model.FilterCategory}" : "")@(!string.IsNullOrEmpty(Model.SearchTerm) ? $"&search={Model.SearchTerm}" : "")">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="ri-add-line me-2"></i>Add New Lab Service
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <!-- Laboratory Selection -->
                        <div class="col-12">
                            <label asp-for="ServiceInput.LabId" class="form-label">
                                Laboratory <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ServiceInput.LabId" class="form-select" required>
                                <option value="">-- Select Laboratory --</option>
                                @if (Model.AvailableLabs != null)
                                {
                                    @foreach (var lab in Model.AvailableLabs)
                                    {
                                        <option value="@lab.LabId">@lab.LabName @(!string.IsNullOrEmpty(lab.Location) ? $"- {lab.Location}" : "")</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ServiceInput.LabId" class="text-danger"></span>
                        </div>

                        <!-- Service Name -->
                        <div class="col-md-6">
                            <label asp-for="ServiceInput.ServiceName" class="form-label">
                                Service Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ServiceInput.ServiceName" class="form-control" placeholder="e.g., Complete Blood Count" required />
                            <span asp-validation-for="ServiceInput.ServiceName" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="col-md-6">
                            <label asp-for="ServiceInput.Category" class="form-label">Category</label>
                            <select asp-for="ServiceInput.Category" class="form-select">
                                <option value="">-- Select Category --</option>
                                <option value="Blood Tests">Blood Tests</option>
                                <option value="Urine Tests">Urine Tests</option>
                                <option value="Imaging">Imaging</option>
                                <option value="Microbiology">Microbiology</option>
                                <option value="Biochemistry">Biochemistry</option>
                                <option value="Pathology">Pathology</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="ServiceInput.Category" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label asp-for="ServiceInput.Description" class="form-label">Description</label>
                            <textarea asp-for="ServiceInput.Description" class="form-control" rows="2" placeholder="Brief description of the service"></textarea>
                            <span asp-validation-for="ServiceInput.Description" class="text-danger"></span>
                        </div>

                        <!-- Sample Type -->
                        <div class="col-md-6">
                            <label asp-for="ServiceInput.SampleType" class="form-label">Sample Type</label>
                            <input asp-for="ServiceInput.SampleType" class="form-control" placeholder="e.g., Blood, Urine" />
                            <span asp-validation-for="ServiceInput.SampleType" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="col-md-6">
                            <label asp-for="ServiceInput.Price" class="form-label">Price (SAR)</label>
                            <div class="input-group">
                                <span class="input-group-text">SAR</span>
                                <input asp-for="ServiceInput.Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="ServiceInput.Price" class="text-danger"></span>
                        </div>

                        <!-- Estimated Time -->
                        <div class="col-md-6">
                            <label asp-for="ServiceInput.EstimatedTime" class="form-label">Estimated Time</label>
                            <input asp-for="ServiceInput.EstimatedTime" class="form-control" placeholder="e.g., 2-3 hours, 1 day" />
                            <span asp-validation-for="ServiceInput.EstimatedTime" class="text-danger"></span>
                        </div>

                        <!-- Instructions -->
                        <div class="col-12">
                            <label asp-for="ServiceInput.Instructions" class="form-label">Instructions</label>
                            <textarea asp-for="ServiceInput.Instructions" class="form-control" rows="2" placeholder="Special instructions for patients (e.g., fasting required)"></textarea>
                            <span asp-validation-for="ServiceInput.Instructions" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="ri-save-line me-1"></i>Create Service
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ri-alert-line text-danger me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="serviceNameToDelete"></strong>?</p>
                <p class="text-muted mb-0">
                    <i class="ri-information-line me-1"></i>This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <input type="hidden" name="serviceId" id="serviceIdToDelete" />
                    <button type="submit" class="btn btn-danger">
                        <i class="ri-delete-bin-line me-1"></i>Delete Service
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Show toast notifications from TempData
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <text>
            toast.success('@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Model.SuccessMessage))', 'Success');
            </text>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <text>
            toast.error('@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Model.ErrorMessage))', 'Error');
            </text>
        }

        // Page size change handler
        function changePageSize(pageSize) {
            const url = new URL(window.location);
            url.searchParams.set('pageSize', pageSize);
            url.searchParams.set('page', '1'); // Reset to first page
            window.location.href = url.toString();
        }

        // Apply filters handler
        function applyFilters() {
            const labId = document.getElementById('labFilter').value;
            const search = document.getElementById('searchInput').value;
            const url = new URL(window.location);
            
            if (labId) {
                url.searchParams.set('labId', labId);
            } else {
                url.searchParams.delete('labId');
            }
            
            if (search) {
                url.searchParams.set('search', search);
            } else {
                url.searchParams.delete('search');
            }
            
            url.searchParams.set('page', '1'); // Reset to first page on filter change
            window.location.href = url.toString();
        }

        // Search on Enter key
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                applyFilters();
            }
        });

        // Debounced search
        let searchTimeout;
        document.getElementById('searchInput').addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                applyFilters();
            }, 500);
        });

        // Delete confirmation
        function confirmDelete(serviceId, serviceName) {
            document.getElementById('serviceIdToDelete').value = serviceId;
            document.getElementById('serviceNameToDelete').textContent = serviceName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
