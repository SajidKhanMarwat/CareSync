@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Select all checkbox
            document.getElementById('selectAll').addEventListener('change', function() {
                const checkboxes = document.querySelectorAll('tbody input[type="checkbox"]');
                checkboxes.forEach(cb => cb.checked = this.checked);
            });
            
            // User actions
            document.querySelectorAll('.table button').forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    const userName = row.querySelector('h6').textContent;
                    const icon = this.querySelector('i').className;
                    
                    switch(true) {
                        case icon.includes('eye'):
                            toast.info(`Viewing profile for ${userName}...`, 'Profile');
                            break;
                        case icon.includes('edit'):
                            toast.info(`Editing user ${userName}...`, 'Edit User');
                            break;
                        case icon.includes('key'):
                            toast.confirm({
                                title: 'Reset Password',
                                message: `Reset password for ${userName}?`,
                                type: 'warning'
                            }).then(confirmed => {
                                if (confirmed) {
                                    toast.success('Password reset email sent successfully!', 'Success');
                                }
                            });
                            break;
                        case icon.includes('forbid'):
                            toast.confirm({
                                title: 'Suspend User',
                                message: `Suspend user ${userName}?`,
                                type: 'warning'
                            }).then(confirmed => {
                                if (confirmed) {
                                    toast.success('User suspended successfully.', 'Success');
                                }
                            });
                            break;
                        case icon.includes('user-add'):
                            toast.confirm({
                                title: 'Reactivate User',
                                message: `Reactivate user ${userName}?`,
                                type: 'info'
                            }).then(confirmed => {
                                if (confirmed) {
                                    toast.success('User reactivated successfully.', 'Success');
                                }
                            });
                            break;
                        case icon.includes('delete'):
                            toast.confirm({
                                title: 'Delete User',
                                message: `Delete user ${userName}? This action cannot be undone.`,
                                type: 'error',
                                confirmText: 'Delete',
                                cancelText: 'Cancel'
                            }).then(confirmed => {
                                if (confirmed) {
                                    toast.success('User deleted successfully.', 'Success');
                                }
                            });
                            break;
                        case icon.includes('file-text'):
                            toast.info(`Opening medical records for ${userName}...`, 'Medical Records');
                            break;
                        case icon.includes('bar-chart'):
                            toast.info(`Viewing workload for ${userName}...`, 'Workload');
                            break;
                        case icon.includes('calendar'):
                            toast.info(`Opening schedule for ${userName}...`, 'Schedule');
                            break;
                        case icon.includes('history'):
                            toast.info(`Viewing audit log for ${userName}...`, 'Audit Log');
                            break;
                    }
                });
            });
            
            // Filter buttons
            document.querySelectorAll('.filter-section button').forEach(btn => {
                btn.addEventListener('click', function() {
                    const filter = this.textContent.trim();
                    toast.info(`Filtering by: ${filter}`, 'Filter Applied');
                });
            });
            
            // Search functionality
            document.querySelector('.input-group button').addEventListener('click', function() {
                const searchTerm = this.previousElementSibling.value;
                if (searchTerm) {
                    toast.info(`Searching for: ${searchTerm}`, 'Search');
                } else {
                    toast.warning('Please enter a search term.', 'Search Required');
                }
            });
            
            // Bulk actions
            document.querySelectorAll('.card:last-child .btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const selectedUsers = document.querySelectorAll('tbody input[type="checkbox"]:checked').length;
                    if (selectedUsers === 0) {
                        toast.warning('Please select users first.', 'No Selection');
                        return;
                    }
                    
                    const action = this.textContent.trim();
                    toast.confirm({
                        title: 'Bulk Action',
                        message: `${action} for ${selectedUsers} selected users?`,
                        type: 'warning'
                    }).then(confirmed => {
                        if (confirmed) {
                            toast.success(`${action} completed for ${selectedUsers} users.`, 'Success');
                        }
                    });
                });
            });
            
            // Add user modal
            document.querySelector('.modal-footer .btn-success').addEventListener('click', function() {
                const form = document.querySelector('.modal form');
                const firstName = form.querySelector('input[type="text"]').value;
                const email = form.querySelector('input[type="email"]').value;
                const role = form.querySelector('select').value;
                
                if (!firstName || !email || !role) {
                    toast.warning('Please fill in all required fields.', 'Validation Error');
                    return;
                }
                
                toast.success('User created successfully!', 'User Added');
                bootstrap.Modal.getInstance(document.getElementById('addUserModal')).hide();
                form.reset();
            });
        });
    </script>
