@page "/Admin/Patients/Profile"
@model CareSync.Pages.Admin.Patients.PatientProfileModel
@{
    ViewData["Title"] = "Patient Profile";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/Patients/PatientsList">Patients</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            Patient Profile
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <a href="~/Admin/Patients/Edit?id=@Model.Patient?.PatientID" class="btn btn-primary">
            <i class="ri-edit-line me-2"></i>Edit Profile
        </a>
        <a href="~/Admin/Patients/MedicalRecords?patientId=@Model.Patient?.PatientID" class="btn btn-outline-info">
            <i class="ri-file-text-line me-2"></i>Medical Records
        </a>
        <a href="~/Admin/Patients/Appointments?patientId=@Model.Patient?.PatientID" class="btn btn-outline-secondary">
            <i class="ri-calendar-line me-2"></i>Appointments
        </a>
        <button class="btn btn-outline-success" onclick="printProfile()">
            <i class="ri-printer-line me-2"></i>Print
        </button>
    </div>
}

@if (Model.HasError)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="ri-error-warning-line me-2"></i>@Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Patient != null)
{
    <div class="row">
        <!-- Patient Overview Card -->
        <div class="col-xl-4 col-lg-5">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Patient.ProfileImage))
                    {
                        <img src="@Model.Patient.ProfileImage" class="rounded-circle mb-3" width="120" height="120" alt="Patient">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary-light d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 120px; height: 120px;">
                            <i class="ri-user-line fs-1 text-primary"></i>
                        </div>
                    }
                    <h4 class="mb-1">@Model.Patient.FullName</h4>
                    <p class="text-muted mb-3">Patient ID: P@Model.Patient.PatientID.ToString("D3")</p>
                    
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        @if (Model.Patient.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.Patient.BloodGroup))
                        {
                            <span class="badge bg-danger">@Model.Patient.BloodGroup</span>
                        }
                    </div>

                    <div class="text-start">
                        <hr>
                        <div class="mb-3">
                            <label class="text-muted small">Email</label>
                            <p class="mb-0">@Model.Patient.Email</p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Phone</label>
                            <p class="mb-0">@Model.Patient.PhoneNumber</p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Address</label>
                            <p class="mb-0">@(Model.Patient.Address ?? "Not provided")</p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Member Since</label>
                            <p class="mb-0">@Model.Patient.CreatedOn.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Emergency Contact Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-phone-line me-2"></i>Emergency Contact
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Contact Name</label>
                        <p class="mb-0">@(Model.Patient.EmergencyContactName ?? "Not provided")</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Contact Number</label>
                        <p class="mb-0">@(Model.Patient.EmergencyContactNumber ?? "Not provided")</p>
                    </div>
                    <div>
                        <label class="text-muted small">Relationship</label>
                        <p class="mb-0">@(Model.Patient.RelationshipToEmergency ?? "Not provided")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Patient Details -->
        <div class="col-xl-8 col-lg-7">
            <!-- Personal Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-user-line me-2"></i>Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Full Name</label>
                            <p class="mb-0">@Model.Patient.FullName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Gender</label>
                            <p class="mb-0">@Model.Patient.Gender</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Date of Birth</label>
                            <p class="mb-0">@(Model.Patient.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "Not provided")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Age</label>
                            <p class="mb-0">@(Model.Patient.Age ?? 0) years</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Marital Status</label>
                            <p class="mb-0">@Model.Patient.MaritalStatus</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Occupation</label>
                            <p class="mb-0">@(Model.Patient.Occupation ?? "Not provided")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Medical Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-heart-pulse-line me-2"></i>Medical Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Blood Group</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Patient.BloodGroup))
                                {
                                    <span class="badge bg-danger-light text-danger">@Model.Patient.BloodGroup</span>
                                }
                                else
                                {
                                    <span>Not provided</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Total Appointments</label>
                            <p class="mb-0">@Model.Patient.TotalAppointments</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Last Visit</label>
                            <p class="mb-0">
                                @if (Model.Patient.LastVisit.HasValue)
                                {
                                    @Model.Patient.LastVisit.Value.ToString("MMMM dd, yyyy")
                                    <small class="text-muted">(@((DateTime.Now - Model.Patient.LastVisit.Value).Days) days ago)</small>
                                }
                                else
                                {
                                    <span>No visits yet</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Next Appointment</label>
                            <p class="mb-0">
                                @if (Model.Patient.NextAppointment.HasValue)
                                {
                                    @Model.Patient.NextAppointment.Value.ToString("MMMM dd, yyyy hh:mm tt")
                                }
                                else
                                {
                                    <span>No upcoming appointments</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="ri-history-line me-2"></i>Recent Activity
                    </h5>
                    <a href="~/Admin/Patients/Appointments?patientId=@Model.Patient.PatientID" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Patient?.RecentAppointments?.Any() == true)
                    {
                        <div class="timeline">
                            @foreach (var appointment in Model.Patient.RecentAppointments.Take(5))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">@appointment.AppointmentType</h6>
                                        <p class="text-muted mb-1">
                                            <i class="ri-calendar-line me-1"></i>@appointment.AppointmentDate.ToString("MMM dd, yyyy hh:mm tt")
                                        </p>
                                        <p class="mb-0">
                                            <i class="ri-user-heart-line me-1"></i>Dr. @appointment.DoctorName
                                            <span class="badge bg-@GetStatusColor(appointment.Status.ToString()) ms-2">@appointment.Status</span>
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="ri-calendar-line fs-1 text-muted"></i>
                            <p class="text-muted mt-2">No recent appointments</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="ri-user-line fs-1 text-muted"></i>
            <p class="text-muted mt-3">Patient not found</p>
            <a href="~/Admin/Patients/PatientsList" class="btn btn-primary mt-2">
                <i class="ri-arrow-left-line me-2"></i>Back to Patients
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function printProfile() {
            window.print();
        }
    </script>
    
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }
        
        .timeline-item:not(:last-child)::before {
            content: '';
            position: absolute;
            left: -21px;
            top: 20px;
            height: calc(100% - 10px);
            width: 2px;
            background-color: #e9ecef;
        }
        
        .timeline-marker {
            position: absolute;
            left: -25px;
            top: 5px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: var(--bs-primary);
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #e9ecef;
        }
        
        @@media print {
            .sidebar, .header, .breadcrumb, .page-actions {
                display: none !important;
            }
        }
    </style>
}

@functions {
    private string GetStatusColor(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "success",
            "confirmed" => "info",
            "pending" => "warning",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}
