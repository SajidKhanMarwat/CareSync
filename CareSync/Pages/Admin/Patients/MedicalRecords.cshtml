@page "/Admin/Patients/MedicalRecords"
@model CareSync.Pages.Admin.Patients.PatientMedicalRecordsModel
@{
    ViewData["Title"] = "Medical Records";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/Patients/PatientsList">Patients</a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/Patients/Profile?id=@Model.Patient?.PatientID">@Model.Patient?.FullName</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            Medical Records
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRecordModal">
            <i class="ri-add-line me-2"></i>Add Record
        </button>
        <button class="btn btn-outline-secondary" onclick="printRecords()">
            <i class="ri-printer-line me-2"></i>Print
        </button>
        <button class="btn btn-outline-info" onclick="exportRecords()">
            <i class="ri-download-line me-2"></i>Export
        </button>
    </div>
}

@if (Model.Patient != null)
{
    <!-- Patient Header -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.Patient.ProfileImage))
                {
                    <img src="@Model.Patient.ProfileImage" class="rounded-circle me-3" width="60" height="60" alt="Patient">
                }
                else
                {
                    <div class="rounded-circle bg-primary-light d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                        <i class="ri-user-line text-primary"></i>
                    </div>
                }
                <div class="flex-grow-1">
                    <h5 class="mb-1">@Model.Patient.FullName</h5>
                    <p class="text-muted mb-0">
                        Patient ID: P@Model.Patient.PatientID.ToString("D3") | 
                        Age: @(Model.Patient.Age ?? 0) years | 
                        Blood Group: <span class="badge bg-danger">@(Model.Patient.BloodGroup ?? "Unknown")</span>
                    </p>
                </div>
                <div>
                    <a href="~/Admin/Patients/Profile?id=@Model.Patient.PatientID" class="btn btn-outline-primary">
                        <i class="ri-user-line me-2"></i>View Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Medical Records Tabs -->
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#vitals">
                        <i class="ri-heart-pulse-line me-2"></i>Vitals
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#medical-history">
                        <i class="ri-history-line me-2"></i>Medical History
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#prescriptions">
                        <i class="ri-medicine-bottle-line me-2"></i>Prescriptions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#lab-reports">
                        <i class="ri-test-tube-line me-2"></i>Lab Reports
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#chronic-diseases">
                        <i class="ri-virus-line me-2"></i>Chronic Diseases
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#allergies">
                        <i class="ri-alert-line me-2"></i>Allergies
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <!-- Vitals Tab -->
                <div class="tab-pane fade show active" id="vitals">
                    <h5 class="mb-3">Recent Vital Signs</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Blood Pressure</th>
                                    <th>Heart Rate</th>
                                    <th>Temperature</th>
                                    <th>Weight</th>
                                    <th>Height</th>
                                    <th>BMI</th>
                                    <th>Recorded By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Vitals.Any())
                                {
                                    @foreach (var vital in Model.Vitals)
                                    {
                                        <tr>
                                            <td>@vital.RecordedDate.ToString("MMM dd, yyyy")</td>
                                            <td>@vital.BloodPressure</td>
                                            <td>@vital.HeartRate bpm</td>
                                            <td>@vital.TemperatureÂ°F</td>
                                            <td>@vital.Weight kg</td>
                                            <td>@vital.Height cm</td>
                                            <td>@vital.BMI</td>
                                            <td>@vital.RecordedBy</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" onclick="viewVitalDetails(@vital.Id)">
                                                    <i class="ri-eye-line"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-4">
                                            <i class="ri-heart-pulse-line fs-1 text-muted"></i>
                                            <p class="text-muted mt-2">No vital signs recorded</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Medical History Tab -->
                <div class="tab-pane fade" id="medical-history">
                    <h5 class="mb-3">Medical History</h5>
                    <div class="timeline">
                        @if (Model.MedicalHistory.Any())
                        {
                            @foreach (var history in Model.MedicalHistory)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker"></div>
                                    <div class="timeline-content">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0">@history.Condition</h6>
                                            <span class="badge bg-info">@history.Date.ToString("MMM dd, yyyy")</span>
                                        </div>
                                        <p class="text-muted mb-2">@history.Description</p>
                                        <p class="mb-0">
                                            <small class="text-muted">
                                                <i class="ri-user-heart-line me-1"></i>Dr. @history.DoctorName
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="ri-history-line fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No medical history recorded</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Prescriptions Tab -->
                <div class="tab-pane fade" id="prescriptions">
                    <h5 class="mb-3">Prescription History</h5>
                    <div class="row">
                        @if (Model.Prescriptions.Any())
                        {
                            @foreach (var prescription in Model.Prescriptions)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="mb-0">Rx #@prescription.Id</h6>
                                                <span class="badge bg-@(prescription.IsActive ? "success" : "secondary")">
                                                    @(prescription.IsActive ? "Active" : "Completed")
                                                </span>
                                            </div>
                                            <p class="text-muted small mb-2">
                                                <i class="ri-calendar-line me-1"></i>@prescription.Date.ToString("MMM dd, yyyy")
                                            </p>
                                            <p class="mb-2">
                                                <strong>Medications:</strong><br>
                                                @foreach (var med in prescription.Medications)
                                                {
                                                    <span class="badge bg-light text-dark me-1 mb-1">@med</span>
                                                }
                                            </p>
                                            <p class="mb-0">
                                                <small class="text-muted">
                                                    <i class="ri-user-heart-line me-1"></i>Dr. @prescription.DoctorName
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center py-4">
                                <i class="ri-medicine-bottle-line fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No prescriptions found</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Lab Reports Tab -->
                <div class="tab-pane fade" id="lab-reports">
                    <h5 class="mb-3">Laboratory Reports</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Test Name</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Ordered By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.LabReports.Any())
                                {
                                    @foreach (var report in Model.LabReports)
                                    {
                                        <tr>
                                            <td>@report.Date.ToString("MMM dd, yyyy")</td>
                                            <td>@report.TestName</td>
                                            <td>@report.Category</td>
                                            <td>
                                                <span class="badge bg-@GetStatusColor(report.Status)">@report.Status</span>
                                            </td>
                                            <td>Dr. @report.OrderedBy</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" onclick="viewReport(@report.Id)">
                                                    <i class="ri-eye-line"></i> View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="ri-test-tube-line fs-1 text-muted"></i>
                                            <p class="text-muted mt-2">No lab reports available</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Chronic Diseases Tab -->
                <div class="tab-pane fade" id="chronic-diseases">
                    <h5 class="mb-3">Chronic Diseases & Conditions</h5>
                    <div class="row">
                        @if (Model.ChronicDiseases.Any())
                        {
                            @foreach (var disease in Model.ChronicDiseases)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-warning">
                                        <div class="card-body">
                                            <h6 class="card-title">@disease.Name</h6>
                                            <p class="text-muted small mb-2">
                                                <i class="ri-calendar-line me-1"></i>Diagnosed: @disease.DiagnosedDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <p class="mb-2">@disease.Description</p>
                                            <p class="mb-0">
                                                <span class="badge bg-@(disease.IsActive ? "warning" : "secondary")">
                                                    @(disease.IsActive ? "Active" : "Resolved")
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center py-4">
                                <i class="ri-virus-line fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No chronic diseases recorded</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Allergies Tab -->
                <div class="tab-pane fade" id="allergies">
                    <h5 class="mb-3">Allergies & Sensitivities</h5>
                    <div class="row">
                        @if (Model.Allergies.Any())
                        {
                            @foreach (var allergy in Model.Allergies)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-danger">
                                        <div class="card-body">
                                            <h6 class="card-title text-danger">
                                                <i class="ri-alert-line me-1"></i>@allergy.Allergen
                                            </h6>
                                            <p class="mb-2">
                                                <strong>Type:</strong> @allergy.Type<br>
                                                <strong>Severity:</strong> 
                                                <span class="badge bg-@GetSeverityColor(allergy.Severity)">@allergy.Severity</span>
                                            </p>
                                            <p class="text-muted small mb-0">@allergy.Reaction</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center py-4">
                                <i class="ri-alert-line fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No allergies recorded</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="ri-user-line fs-1 text-muted"></i>
            <p class="text-muted mt-3">Patient not found</p>
            <a href="~/Admin/Patients/PatientsList" class="btn btn-primary mt-2">
                <i class="ri-arrow-left-line me-2"></i>Back to Patients
            </a>
        </div>
    </div>
}

<!-- Add Record Modal -->
<div class="modal fade" id="addRecordModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Medical Record</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Medical record forms will be implemented based on the selected record type.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Record</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }
        
        .timeline-item:not(:last-child)::before {
            content: '';
            position: absolute;
            left: -21px;
            top: 20px;
            height: calc(100% - 10px);
            width: 2px;
            background-color: #e9ecef;
        }
        
        .timeline-marker {
            position: absolute;
            left: -25px;
            top: 5px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: var(--bs-primary);
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #e9ecef;
        }
    </style>
    
    <script>
        function printRecords() {
            window.print();
        }
        
        function exportRecords() {
            // Implement export functionality
            alert('Export functionality will be implemented');
        }
        
        function viewVitalDetails(id) {
            // Implement view details
            alert('View vital details: ' + id);
        }
        
        function viewReport(id) {
            // Implement view report
            alert('View lab report: ' + id);
        }
    </script>
}

@functions {
    private string GetStatusColor(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "success",
            "pending" => "warning",
            "in progress" => "info",
            _ => "secondary"
        };
    }
    
    private string GetSeverityColor(string severity)
    {
        return severity?.ToLower() switch
        {
            "severe" => "danger",
            "moderate" => "warning",
            "mild" => "info",
            _ => "secondary"
        };
    }
}
