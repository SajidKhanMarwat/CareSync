@page "/Admin/Users"
@model CareSync.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "All Users Management";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/Users">User Management</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            All Users
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
            <i class="ri-user-add-line me-2"></i>Add User
        </button>
        <button class="btn btn-outline-secondary" onclick="exportUsers()">
            <i class="ri-download-line me-2"></i>Export
        </button>
        <button class="btn btn-outline-info" onclick="importUsers()">
            <i class="ri-upload-line me-2"></i>Import
        </button>
    </div>
}

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-primary text-white rounded-3 me-3">
                        <i class="ri-team-line"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">@Model.UserStatistics.TotalUsers.ToString("N0")</h5>
                        <p class="mb-0 text-muted">Total Users</p>
                        <small class="@(Model.UserStatistics.UsersGrowthPercentage >= 0 ? "text-success" : "text-danger")">@(Model.UserStatistics.UsersGrowthPercentage >= 0 ? "+" : "")@Model.UserStatistics.UsersGrowthPercentage.ToString("F1")% this month</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-success text-white rounded-3 me-3">
                        <i class="ri-stethoscope-line"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">@Model.UserStatistics.TotalDoctors</h5>
                        <p class="mb-0 text-muted">Doctors</p>
                        <small class="@(Model.UserStatistics.NewDoctorsThisMonth > 0 ? "text-success" : "text-muted")">+@Model.UserStatistics.NewDoctorsThisMonth this month</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-info text-white rounded-3 me-3">
                        <i class="ri-user-heart-line"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">@Model.UserStatistics.TotalPatients.ToString("N0")</h5>
                        <p class="mb-0 text-muted">Patients</p>
                        <small class="@(Model.UserStatistics.PatientsGrowthPercentage >= 0 ? "text-success" : "text-danger")">@(Model.UserStatistics.PatientsGrowthPercentage >= 0 ? "+" : "")@Model.UserStatistics.PatientsGrowthPercentage.ToString("F1")% this month</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-warning text-white rounded-3 me-3">
                        <i class="ri-test-tube-line"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">@Model.UserStatistics.TotalLabStaff</h5>
                        <p class="mb-0 text-muted">Lab Staff</p>
                        <small class="@(Model.UserStatistics.NewLabStaffThisMonth > 0 ? "text-success" : "text-muted")">+@Model.UserStatistics.NewLabStaffThisMonth this month</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<form method="get" id="filterForm">
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-filter-line me-2"></i>User Filters
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Search Users</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Name, Email, ID..." 
                                   name="SearchTerm" value="@Model.SearchTerm" id="searchInput">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="ri-search-line"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Role</label>
                        <select class="form-select" id="roleFilter" name="RoleFilter" asp-for="RoleFilter">
                            <option value="">All Roles</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role" selected="@(Model.RoleFilter == role)">@role</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="StatusFilter" value="@Model.StatusFilter" id="statusFilter">
                            <option value="">All Status</option>
                            <option value="Active" selected="@(Model.StatusFilter == "Active")">Active</option>
                            <option value="Inactive" selected="@(Model.StatusFilter == "Inactive")">Inactive</option>
                            <option value="Suspended" selected="@(Model.StatusFilter == "Suspended")">Suspended</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Registration Date</label>
                        <select class="form-select" name="DateFilter" value="@Model.DateFilter" id="dateFilter">
                            <option value="">All Time</option>
                            <option value="today" selected="@(Model.DateFilter == "today")">Today</option>
                            <option value="week" selected="@(Model.DateFilter == "week")">This Week</option>
                            <option value="month">This Month</option>
                            <option value="year">This Year</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Department</label>
                        <select class="form-select" id="departmentFilter" name="DepartmentFilter" asp-for="DepartmentFilter">
                            <option value="">All Departments</option>
                            @foreach (var dept in Model.Departments)
                            {
                                <option value="@dept" selected="@(Model.DepartmentFilter == dept)">@dept</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-1">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-primary d-block w-100" type="submit">
                            <i class="ri-search-line"></i>
                        </button>
                    </div>
                    <div class="col-md-1">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-outline-secondary d-block w-100" type="button" onclick="clearFilters()">
                            <i class="ri-refresh-line"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>

<!-- All Users Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="ri-team-line me-2"></i>All Users Directory
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary btn-sm" onclick="toggleView('detailed')">
                        <i class="ri-list-check"></i> Detailed
                    </button>
                    <button class="btn btn-primary btn-sm" onclick="toggleView('compact')">
                        <i class="ri-grid-line"></i> Compact
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="usersTable">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" class="form-check-input" id="selectAll">
                                </th>
                                <th>User ID</th>
                                <th>User Details</th>
                                <th>Role & Department</th>
                                <th>Contact Info</th>
                                <th>Status & Activity</th>
                                <th>Professional Info</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.UsersList?.Items?.Any() == true)
                            {
                                @foreach (var user in Model.UsersList.Items)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" class="form-check-input user-checkbox" value="@user.UserId">
                                        </td>
                                        <td>
                                            <span class="fw-bold text-primary">#@user.UserCode</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @{
                                                    var avatarImage = user.RoleType switch
                                                    {
                                                        CareSync.Shared.Enums.RoleType.Admin => "~/theme/images/admin.png",
                                                        CareSync.Shared.Enums.RoleType.Doctor => "~/theme/images/doctor1.png",
                                                        CareSync.Shared.Enums.RoleType.Patient => "~/theme/images/patient1.png",
                                                        CareSync.Shared.Enums.RoleType.Lab or CareSync.Shared.Enums.RoleType.LabAssistant => "~/theme/images/lab-tech.png",
                                                        _ => "~/theme/images/default-user.png"
                                                    };
                                                }
                                                <img src="@(string.IsNullOrEmpty(user.ProfilePicture) ? avatarImage : user.ProfilePicture)" 
                                                     class="rounded-circle me-2" width="40" height="40" alt="@user.RoleName">
                                                <div>
                                                    <h6 class="mb-0">@user.FullName</h6>
                                                    <small class="text-muted">
                                                        @if (user.RoleType == CareSync.Shared.Enums.RoleType.Doctor && !string.IsNullOrEmpty(user.Specialization))
                                                        {
                                                            @user.Specialization
                                                        }
                                                        else
                                                        {
                                                            @user.RoleName
                                                        }
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @{
                                                var badgeClass = user.RoleType switch
                                                {
                                                    CareSync.Shared.Enums.RoleType.Admin => "bg-danger",
                                                    CareSync.Shared.Enums.RoleType.Doctor => "bg-primary",
                                                    CareSync.Shared.Enums.RoleType.Patient => "bg-info",
                                                    CareSync.Shared.Enums.RoleType.Lab or CareSync.Shared.Enums.RoleType.LabAssistant => "bg-warning",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badgeClass mb-1">@user.RoleName</span><br>
                                            <small class="text-muted">@(user.Department ?? "N/A")</small>
                                        </td>
                                        <td>
                                            <span>@user.Email</span>
                                            <small class="text-muted d-block">@(user.PhoneNumber ?? "N/A")</small>
                                        </td>
                                        <td>
                                            @{
                                                var statusBadgeClass = user.Status switch
                                                {
                                                    "Active" => "bg-success",
                                                    "Inactive" => "bg-secondary",
                                                    "Suspended" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @statusBadgeClass mb-1">@user.Status</span><br>
                                            <small class="text-muted">
                                                @if (user.LastLoginDate.HasValue)
                                                {
                                                    <text>Last: @user.LastLoginDate.Value.ToString("MMM dd, yyyy")</text>
                                                }
                                                else
                                                {
                                                    <text>Never logged in</text>
                                                }
                                            </small>
                                        </td>
                                        <td>
                                            @if (user.RoleType == CareSync.Shared.Enums.RoleType.Doctor)
                                            {
                                                <small class="text-muted">@(user.YearsOfExperience?.ToString() ?? "0") years exp</small><br>
                                                <small class="text-success">License: @(user.LicenseNumber ?? "N/A")</small>
                                            }
                                            else if (user.RoleType == CareSync.Shared.Enums.RoleType.Patient)
                                            {
                                                <small class="text-muted">Blood: @(user.BloodGroup ?? "N/A")</small><br>
                                                <small class="text-info">Visits: @(user.TotalAppointments?.ToString() ?? "0")</small>
                                            }
                                            else if (user.RoleType == CareSync.Shared.Enums.RoleType.Admin)
                                            {
                                                <small class="text-muted">Full System Access</small><br>
                                                <small class="text-success">All Permissions</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">@user.RoleName</small><br>
                                                <small class="text-info">Active</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                    <i class="ri-more-2-line"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="viewUserDetails('@user.UserId')">
                                                        <i class="ri-eye-line me-2"></i>View Profile</a></li>
                                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="editUser('@user.UserId')">
                                                        <i class="ri-edit-line me-2"></i>Edit User</a></li>
                                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="resetPassword('@user.UserId')">
                                                        <i class="ri-key-line me-2"></i>Reset Password</a></li>
                                                    
                                                    @if (user.RoleType == CareSync.Shared.Enums.RoleType.Doctor)
                                                    {
                                                        <li><a class="dropdown-item" href="/Admin/Doctors/Profile?userId=@user.UserId">
                                                            <i class="ri-calendar-line me-2"></i>View Schedule</a></li>
                                                        <li><a class="dropdown-item" href="/Admin/Doctors/Patients?userId=@user.UserId">
                                                            <i class="ri-user-heart-line me-2"></i>View Patients</a></li>
                                                    }
                                                    else if (user.RoleType == CareSync.Shared.Enums.RoleType.Patient)
                                                    {
                                                        <li><a class="dropdown-item" href="/Admin/Patients/Profile?userId=@user.UserId">
                                                            <i class="ri-file-text-line me-2"></i>Medical Records</a></li>
                                                        <li><a class="dropdown-item" href="/Admin/Appointments?patientId=@user.UserId">
                                                            <i class="ri-calendar-line me-2"></i>Appointments</a></li>
                                                    }
                                                    
                                                    <li><hr class="dropdown-divider"></li>
                                                    
                                                    @if (user.IsActive)
                                                    {
                                                        <li><a class="dropdown-item text-warning" href="javascript:void(0)" 
                                                            onclick="toggleUserStatus('@user.UserId', false)">
                                                            <i class="ri-user-unfollow-line me-2"></i>Deactivate</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a class="dropdown-item text-success" href="javascript:void(0)" 
                                                            onclick="toggleUserStatus('@user.UserId', true)">
                                                            <i class="ri-user-follow-line me-2"></i>Activate</a></li>
                                                    }
                                                    
                                                    <li><a class="dropdown-item text-danger" href="javascript:void(0)" 
                                                        onclick="deleteUser('@user.UserId', '@user.FullName')">
                                                        <i class="ri-delete-bin-line me-2"></i>Delete</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="ri-user-line display-4 text-muted"></i>
                                        <p class="text-muted mt-2">No users found matching your criteria.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                @if (Model.UsersList?.TotalCount > 0)
                {
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="d-flex align-items-center">
                            @{
                                var startItem = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
                                var endItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.UsersList.TotalCount);
                            }
                            <span class="text-muted me-3">Showing @startItem to @endItem of @Model.UsersList.TotalCount users</span>
                            <select class="form-select form-select-sm" style="width: auto;" onchange="changePageSize(this.value)">
                                <option value="10" selected="@(Model.PageSize == 10)">10 per page</option>
                                <option value="25" selected="@(Model.PageSize == 25)">25 per page</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50 per page</option>
                                <option value="100" selected="@(Model.PageSize == 100)">100 per page</option>
                            </select>
                        </div>
                        @if (Model.UsersList?.TotalPages > 1)
                        {
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                <!-- First Page -->
                                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="?Page=1&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter" title="First Page">
                                        <i class="ri-arrow-left-double-line"></i>
                                    </a>
                                </li>
                                
                                <!-- Previous Page -->
                                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="?Page=@(Model.CurrentPage - 1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter" title="Previous Page">
                                        <i class="ri-arrow-left-s-line"></i>
                                    </a>
                                </li>
                                
                                <!-- Page Numbers -->
                                @{
                                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                                    var endPage = Math.Min(Model.UsersList.TotalPages, Model.CurrentPage + 2);
                                    
                                    // Show first page if not in range
                                    if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?Page=1&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter">1</a>
                                        </li>
                                        if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                    }
                                    
                                    // Show page numbers
                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="?Page=@i&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter">@i</a>
                                        </li>
                                    }
                                    
                                    // Show last page if not in range
                                    if (endPage < Model.UsersList.TotalPages)
                                    {
                                        if (endPage < Model.UsersList.TotalPages - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="?Page=@Model.UsersList.TotalPages&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter">@Model.UsersList.TotalPages</a>
                                        </li>
                                    }
                                }
                                
                                <!-- Next Page -->
                                <li class="page-item @(Model.CurrentPage >= Model.UsersList.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?Page=@(Model.CurrentPage + 1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter" title="Next Page">
                                        <i class="ri-arrow-right-s-line"></i>
                                    </a>
                                </li>
                                
                                <!-- Last Page -->
                                <li class="page-item @(Model.CurrentPage >= Model.UsersList.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?Page=@Model.UsersList.TotalPages&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&RoleFilter=@Model.RoleFilter&StatusFilter=@Model.StatusFilter&DepartmentFilter=@Model.DepartmentFilter&DateFilter=@Model.DateFilter" title="Last Page">
                                        <i class="ri-arrow-right-double-line"></i>
                                    </a>
                                </li>
                                </ul>
                            </nav>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ri-user-add-line me-2"></i>Add New User
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addUserForm">
                    <!-- Step 1: Basic Information -->
                    <div class="step-content active" data-step="1">
                        <h6 class="mb-3 text-primary">Basic Information</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="firstName" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="lastName" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email Address <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" name="email" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" name="phoneNumber" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Gender <span class="text-danger">*</span></label>
                                <select class="form-select" name="gender" required>
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Date of Birth <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" name="dateOfBirth" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">User Role <span class="text-danger">*</span></label>
                                <select class="form-select" name="userRole" id="userRoleSelect" required onchange="toggleRoleSpecificFields()">
                                    <option value="">Select Role</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Doctor">Doctor</option>
                                    <option value="Patient">Patient</option>
                                    <option value="Lab">Lab Staff</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Address</label>
                                <textarea class="form-control" name="address" rows="2"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Role-Specific Fields -->
                    <!-- Doctor Specific Fields -->
                    <div class="role-specific-fields" id="doctorFields" style="display: none;">
                        <hr class="my-4">
                        <h6 class="mb-3 text-success">Doctor Information</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Medical License Number</label>
                                <input type="text" class="form-control" name="licenseNumber">
                            </div>
