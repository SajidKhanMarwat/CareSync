@page "/Admin/Roles"
@model CareSync.Pages.Admin.RolesModel
@{
    ViewData["Title"] = "Role Management";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">System Roles</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Role ID</th>
                                <th>Role Name</th>
                                <th>Arabic Name</th>
                                <th>Description</th>
                                <th>Users Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#R001</td>
                                <td>Admin</td>
                                <td>مدير النظام</td>
                                <td>System Administrator with full access</td>
                                <td>5</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">Edit</button>
                                    <button class="btn btn-sm btn-outline-info">Permissions</button>
                                </td>
                            </tr>
                            <tr>
                                <td>#R002</td>
                                <td>Doctor</td>
                                <td>طبيب</td>
                                <td>Medical practitioner with patient access</td>
                                <td>45</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">Edit</button>
                                    <button class="btn btn-sm btn-outline-info">Permissions</button>
                                </td>
                            </tr>
                            <tr>
                                <td>#R003</td>
                                <td>Patient</td>
                                <td>مريض</td>
                                <td>Patient with limited access to own records</td>
                                <td>98</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">Edit</button>
                                    <button class="btn btn-sm btn-outline-info">Permissions</button>
                                </td>
                            </tr>
                            <tr>
                                <td>#R004</td>
                                <td>Lab Technician</td>
                                <td>فني مختبر</td>
                                <td>Laboratory staff with test management access</td>
                                <td>8</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">Edit</button>
                                    <button class="btn btn-sm btn-outline-info">Permissions</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Role Claims & Permissions</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Role</th>
                                <th>Claim Type</th>
                                <th>Claim Value</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Admin</td>
                                <td>Permission</td>
                                <td>CanManageUsers</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Admin</td>
                                <td>Permission</td>
                                <td>CanManageRoles</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Doctor</td>
                                <td>Permission</td>
                                <td>CanViewPatients</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Doctor</td>
                                <td>Permission</td>
                                <td>CanCreatePrescriptions</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Patient</td>
                                <td>Permission</td>
                                <td>CanViewOwnRecords</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Lab Technician</td>
                                <td>Permission</td>
                                <td>CanManageLabTests</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title">Add Permission</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" name="RoleId">
                            <option value="">Select Role</option>
                            <option value="1">Admin</option>
                            <option value="2">Doctor</option>
                            <option value="3">Patient</option>
                            <option value="4">Lab Technician</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Claim Type</label>
                        <input type="text" class="form-control" name="ClaimType" placeholder="e.g., Permission" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Claim Value</label>
                        <input type="text" class="form-control" name="ClaimValue" placeholder="e.g., CanViewReports" />
                    </div>
                    <div class="mb-3">
                        <button type="button" class="btn btn-success">Add Permission</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section PageActions {
    <button type="button" class="btn btn-outline-secondary">Export Roles & Permissions</button>
}
