@page "/Admin/Doctors"
@model CareSync.Pages.Admin.DoctorsModel
@{
    ViewData["Title"] = "Doctors Management";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/Doctors">Doctors</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            All Doctors
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <a href="/Admin/CreateDoctor" class="btn btn-primary">
            <i class="ri-add-line me-2"></i>Add New Doctor
        </a>
        <button class="btn btn-outline-secondary" onclick="exportDoctors()">
            <i class="ri-download-line me-2"></i>Export
        </button>
        <div class="dropdown">
            <button class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown">
                <i class="ri-filter-line me-2"></i>Specialization
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="?page=1">All Specializations</a></li>
                <li><hr class="dropdown-divider"></li>
                @if (Model.Specializations != null && Model.Specializations.Any())
                {
                    @foreach (var spec in Model.Specializations.OrderBy(s => s.Specialization))
                    {
                        <li>
                            <a class="dropdown-item" href="?specialization=@Uri.EscapeDataString(spec.Specialization)&page=1">
                                <i class="@spec.IconClass me-2 text-@spec.ColorClass"></i>
                                @spec.Specialization
                                <span class="badge bg-secondary ms-2">@spec.DoctorCount</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
}

<!-- Statistics Cards -->
<div class="row gx-3 mb-4">
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-primary rounded-circle me-3">
                        <div class="icon-box md bg-primary-lighten rounded-5">
                            <i class="ri-stethoscope-line fs-4 text-primary"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@(Model.Statistics?.TotalDoctors ?? 0)</h1>
                        <p class="m-0">Total Doctors</p>
                    </div>
                </div>
                @if (Model.Statistics?.NewThisMonth > 0)
                {
                    <div class="mt-2">
                        <small class="text-success">+@Model.Statistics.NewThisMonth this month</small>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-success rounded-circle me-3">
                        <div class="icon-box md bg-success-lighten rounded-5">
                            <i class="ri-user-star-line fs-4 text-success"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@(Model.Statistics?.ActiveDoctors ?? 0)</h1>
                        <p class="m-0">Active</p>
                    </div>
                </div>
                @if (Model.Statistics?.InactiveDoctors > 0)
                {
                    <div class="mt-2">
                        <small class="text-muted">@Model.Statistics.InactiveDoctors inactive</small>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-info rounded-circle me-3">
                        <div class="icon-box md bg-info-lighten rounded-5">
                            <i class="ri-calendar-check-line fs-4 text-info"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@(Model.Statistics?.TotalAppointmentsToday ?? 0)</h1>
                        <p class="m-0">Appointments Today</p>
                    </div>
                </div>
                @if (Model.Statistics?.TotalPatientsToday > 0)
                {
                    <div class="mt-2">
                        <small class="text-info">@Model.Statistics.TotalPatientsToday patients</small>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="p-2 border border-warning rounded-circle me-3">
                        <div class="icon-box md bg-warning-lighten rounded-5">
                            <i class="ri-award-line fs-4 text-warning"></i>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h1 class="lh-1">@(Model.Statistics?.AverageExperience.ToString("F1") ?? "0")</h1>
                        <p class="m-0">Avg Experience</p>
                    </div>
                </div>
                @if (Model.Statistics?.AverageRating > 0)
                {
                    <div class="mt-2">
                        <small class="text-warning">
                            <i class="ri-star-fill"></i> @Model.Statistics.AverageRating.ToString("F1") rating
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Charts and Specialties Row -->
<div class="row mb-4">
    <!-- Doctor Performance Chart -->
    <div class="col-xl-8 col-lg-7 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-bar-chart-line me-2"></i>Doctor Performance
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-height">
                    @if (Model.TopPerformers != null && Model.TopPerformers.Any())
                    {
                        <div id="doctorPerformance"></div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="ri-bar-chart-line fs-1 mb-3 d-block"></i>
                            <p>No doctor performance data available</p>
                            <small>Add doctors to see performance metrics</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Specialties Distribution -->
    <div class="col-xl-4 col-lg-5 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-pie-chart-line me-2"></i>Specialties
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-height-sm">
                    @if (Model.Specializations != null && Model.Specializations.Any())
                    {
                        <div id="specialtiesChart"></div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="ri-pie-chart-line fs-1 mb-3 d-block"></i>
                            <p>No specialization data available</p>
                            <small>Add doctors to see distribution</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Specialties Cards -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-hospital-line me-2"></i>Medical Specialties
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @{
                        // Get specialization data or use defaults
                        var cardiology = Model.Specializations?.FirstOrDefault(s => s.Specialization.Equals("Cardiology", StringComparison.OrdinalIgnoreCase));
                        var neurology = Model.Specializations?.FirstOrDefault(s => s.Specialization.Equals("Neurology", StringComparison.OrdinalIgnoreCase));
                        var orthopedics = Model.Specializations?.FirstOrDefault(s => s.Specialization.Equals("Orthopedics", StringComparison.OrdinalIgnoreCase));
                        var pediatrics = Model.Specializations?.FirstOrDefault(s => s.Specialization.Equals("Pediatrics", StringComparison.OrdinalIgnoreCase));
                        var emergency = Model.Specializations?.FirstOrDefault(s => s.Specialization.Equals("Emergency", StringComparison.OrdinalIgnoreCase));
                    }
                    
                    <!-- Cardiology -->
                    <div class="col">
                        <div class="card border rounded-5">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="icon-box lg bg-primary-lighten rounded-circle mb-3">
                                        <i class="ri-heart-pulse-line fs-2 text-primary"></i>
                                    </div>
                                    <h6>Cardiology</h6>
                                    <h2 class="text-primary m-0">@(cardiology?.DoctorCount)</h2>
                                    <small class="text-muted">Doctors</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Neurology -->
                    <div class="col">
                        <div class="card border rounded-5">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="icon-box lg bg-success-lighten rounded-circle mb-3">
                                        <i class="ri-brain-line fs-2 text-success"></i>
                                    </div>
                                    <h6>Neurology</h6>
                                    <h2 class="text-success m-0">@(neurology?.DoctorCount)</h2>
                                    <small class="text-muted">Doctors</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Orthopedics -->
                    <div class="col">
                        <div class="card border rounded-5">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="icon-box lg bg-warning-lighten rounded-circle mb-3">
                                        <i class="ri-bone-line fs-2 text-warning"></i>
                                    </div>
                                    <h6>Orthopedics</h6>
                                    <h2 class="text-warning m-0">@(orthopedics?.DoctorCount)</h2>
                                    <small class="text-muted">Doctors</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Pediatrics -->
                    <div class="col">
                        <div class="card border rounded-5">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="icon-box lg bg-info-lighten rounded-circle mb-3">
                                        <i class="ri-baby-line fs-2 text-info"></i>
                                    </div>
                                    <h6>Pediatrics</h6>
                                    <h2 class="text-info m-0">@(pediatrics?.DoctorCount)</h2>
                                    <small class="text-muted">Doctors</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Emergency -->
                    <div class="col">
                        <div class="card border rounded-5">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="icon-box lg bg-danger-lighten rounded-circle mb-3">
                                        <i class="ri-emergency-line fs-2 text-danger"></i>
                                    </div>
                                    <h6>Emergency</h6>
                                    <h2 class="text-danger m-0">@(emergency?.DoctorCount)</h2>
                                    <small class="text-muted">Doctors</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Doctors Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="ri-team-line me-2"></i>All Doctors
                </h5>
                <div class="d-flex gap-2">
                    <div class="input-group" style="width: 250px;">
                        <input type="text" class="form-control" placeholder="Search doctors..." id="searchInput">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="ri-search-line"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="doctorsTable">
                        <thead>
                            <tr>
                                <th>Doctor</th>
                                <th>Specialization</th>
                                <th>Department</th>
                                <th>Experience</th>
                                <th>Patients</th>
                                <th>Rating</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.DoctorGrid != null && Model.DoctorGrid.Any())
                            {
                                @foreach (var doctor in Model.DoctorGrid)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@doctor.ProfileImage" class="rounded-circle me-3" width="40" height="40" alt="@doctor.FullName">
                                                <div>
                                                    <h6 class="mb-0">@doctor.FullName</h6>
                                                    <small class="text-muted">@doctor.Qualifications</small>
                                                    <br><small class="text-primary">License: @doctor.LicenseNumber</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @{
                                                var specColor = doctor.Specialization switch
                                                {
                                                    "Cardiology" => "primary",
                                                    "Neurology" => "success",
                                                    "Orthopedics" => "warning",
                                                    "Pediatrics" => "info",
                                                    "Emergency" => "danger",
                                                    _ => "secondary"
                                                };
                                            }
                                            <span class="badge bg-@(specColor)-light text-@specColor">@doctor.Specialization</span>
                                        </td>
                                        <td>@doctor.Department</td>
                                        <td>
                                            <span class="fw-bold">@doctor.ExperienceYears years</span><br>
                                            @if (doctor.JoinedDate.HasValue)
                                            {
                                                <small class="text-muted">Since @doctor.JoinedDate.Value.Year</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="fw-bold">@doctor.TotalPatients</span><br>
                                            @if (doctor.MonthlyPatients > 0)
                                            {
                                                <small class="text-success">+@doctor.MonthlyPatients this month</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="fw-bold me-1">@doctor.Rating.ToString("F1")</span>
                                                <div class="text-warning">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Floor(doctor.Rating))
                                                        {
                                                            <i class="ri-star-fill"></i>
                                                        }
                                                        else if (i - 0.5m <= doctor.Rating)
                                                        {
                                                            <i class="ri-star-half-line"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="ri-star-line"></i>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            @if (doctor.ReviewCount > 0)
                                            {
                                                <small class="text-muted">(@doctor.ReviewCount reviews)</small>
                                            }
                                        </td>
                                        <td>
                                            @if (doctor.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                    <i class="ri-more-2-line"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="/Admin/DoctorProfile?id=@doctor.UserID"><i class="ri-eye-line me-2"></i>View Profile</a></li>
                                                    <li><a class="dropdown-item" href="/Admin/EditDoctor?id=@doctor.UserID"><i class="ri-edit-line me-2"></i>Edit Doctor</a></li>
                                                    <li><a class="dropdown-item" href="/Admin/DoctorSchedule?id=@doctor.UserID"><i class="ri-calendar-line me-2"></i>View Schedule</a></li>
                                                    <li><a class="dropdown-item" href="/Admin/DoctorPatients?id=@doctor.UserID"><i class="ri-user-heart-line me-2"></i>View Patients</a></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    @if (doctor.IsActive)
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="ToggleStatus" class="d-inline">
                                                                <input type="hidden" name="userId" value="@doctor.UserID" />
                                                                <input type="hidden" name="isActive" value="false" />
                                                                <button type="submit" class="dropdown-item text-warning">
                                                                    <i class="ri-user-unfollow-line me-2"></i>Suspend
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="ToggleStatus" class="d-inline">
                                                                <input type="hidden" name="userId" value="@doctor.UserID" />
                                                                <input type="hidden" name="isActive" value="true" />
                                                                <button type="submit" class="dropdown-item text-success">
                                                                    <i class="ri-user-follow-line me-2"></i>Activate
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="ri-user-line fs-1 text-muted"></i>
                                        <p class="text-muted mt-2">No doctors found</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        @if (Model.DoctorGrid != null && Model.DoctorGrid.Any())
                        {
                            var startItem = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
                            var endItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.Statistics?.TotalDoctors ?? Model.DoctorGrid.Count);
                            <span class="text-muted">Showing @startItem to @endItem of @(Model.Statistics?.TotalDoctors ?? Model.DoctorGrid.Count) doctors</span>
                        }
                        else
                        {
                            <span class="text-muted">No doctors to display</span>
                        }
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)&specialization=@Model.Specialization&isActive=@Model.IsActive">
                                    <i class="ri-arrow-left-s-line"></i>
                                </a>
                            </li>
                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&specialization=@Model.Specialization&isActive=@Model.IsActive">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)&specialization=@Model.Specialization&isActive=@Model.IsActive">
                                    <i class="ri-arrow-right-s-line"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .chart-height {
            min-height: 300px;
            position: relative;
        }
        .chart-height-sm {
            min-height: 250px;
            position: relative;
        }
    </style>
}

@section Scripts {
    <!-- ApexCharts JS -->
    <script src="~/theme/vendor/apex/apexcharts.min.js"></script>
    
    <script>
        // Doctor Performance Chart
        @if (Model.TopPerformers != null && Model.TopPerformers.Any())
        {
            <text>
            var performanceOptions = {
                chart: {
                    height: 300,
                    type: 'bar',
                    toolbar: {
                        show: false,
                    },
                },
                series: [{
                    name: 'Patients Treated',
                    data: [@string.Join(",", Model.TopPerformers.Select(p => p.TotalPatientsTreated))]
                }],
                xaxis: {
                    categories: [@Html.Raw(string.Join(",", Model.TopPerformers.Select(p => $"'{p.DoctorName}'")))],
                },
                colors: ['#0d6efd'],
                plotOptions: {
                    bar: {
                        horizontal: false,
                        columnWidth: '55%',
                        endingShape: 'rounded'
                    },
                },
                dataLabels: {
                    enabled: false
                },
                grid: {
                    borderColor: "#d8dee6",
                    strokeDashArray: 5,
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return val + " patients"
                        }
                    }
                }
            };

            var performanceChart = new ApexCharts(document.querySelector("#doctorPerformance"), performanceOptions);
            performanceChart.render();
            </text>
        }

        // Specialties Chart
        @if (Model.Specializations != null && Model.Specializations.Any())
        {
            <text>
            var specialtiesOptions = {
                chart: {
                    height: 250,
                    type: 'donut',
                },
                series: [@string.Join(",", Model.Specializations.Select(s => s.DoctorCount))],
                labels: [@Html.Raw(string.Join(",", Model.Specializations.Select(s => $"'{s.Specialization}'")))],
                colors: [@Html.Raw(string.Join(",", Model.Specializations.Select(s => 
                    s.ColorClass switch
                    {
                        "primary" => "'#0d6efd'",
                        "success" => "'#198754'",
                        "warning" => "'#ffc107'",
                        "info" => "'#0dcaf0'",
                        "danger" => "'#dc3545'",
                        _ => "'#6c757d'"
                    })))],
                legend: {
                    position: 'bottom',
                    horizontalAlign: 'center',
                },
                plotOptions: {
                    pie: {
                        donut: {
                            size: '70%'
                        }
                    }
                },
                dataLabels: {
                    enabled: true,
                    formatter: function (val) {
                        return Math.round(val) + "%"
                    }
                }
            };

            var specialtiesChart = new ApexCharts(document.querySelector("#specialtiesChart"), specialtiesOptions);
            specialtiesChart.render();
            </text>
        }

        // Export function
        function exportDoctors() {
            // TODO: Implement actual export functionality
            alert('Export functionality will be implemented soon.');
        }
    </script>

    <style>
        .chart-height {
            height: 300px;
        }
        
        .chart-height-sm {
            height: 250px;
        }
        
        .icon-box {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .icon-box.md {
            width: 40px;
            height: 40px;
        }
        
        .icon-box.lg {
            width: 60px;
            height: 60px;
        }
        
        .bg-primary-lighten {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }
        
        .bg-success-lighten {
            background-color: rgba(25, 135, 84, 0.1) !important;
        }
        
        .bg-warning-lighten {
            background-color: rgba(255, 193, 7, 0.1) !important;
        }
        
        .bg-info-lighten {
            background-color: rgba(13, 202, 240, 0.1) !important;
        }
        
        .bg-danger-lighten {
            background-color: rgba(220, 53, 69, 0.1) !important;
        }
        
        .bg-primary-light {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }
        
        .bg-success-light {
            background-color: rgba(25, 135, 84, 0.1) !important;
        }
    </style>
}
