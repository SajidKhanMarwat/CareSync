@page "/Admin/EditPatient"
@model CareSync.Pages.Admin.EditPatientModel
@{
    ViewData["Title"] = "Edit Patient";
}

@section Breadcrumb {
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Admin/Dashboard">
                <i class="ri-home-3-line"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="~/Admin/Patients">Patients</a>
        </li>
        <li class="breadcrumb-item text-primary" aria-current="page">
            Edit Patient
        </li>
    </ol>
}

@section PageActions {
    <div class="d-flex gap-2">
        <a href="~/Admin/PatientProfile?id=@Model.Patient?.PatientID" class="btn btn-outline-secondary">
            <i class="ri-arrow-left-line me-2"></i>Back to Profile
        </a>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="ri-check-line me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="ri-error-warning-line me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Patient != null)
{
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Patient.PatientID" />
        <input type="hidden" asp-for="Patient.UserID" />
        
        <div class="row">
            <!-- Personal Information -->
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="ri-user-line me-2"></i>Personal Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="Patient.FirstName" required>
                                <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="Patient.LastName" required>
                                <span asp-validation-for="Patient.LastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" asp-for="Patient.Email" required>
                                <span asp-validation-for="Patient.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" asp-for="Patient.PhoneNumber" required>
                                <span asp-validation-for="Patient.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" asp-for="Patient.DateOfBirth">
                                <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Gender <span class="text-danger">*</span></label>
                                <select class="form-select" asp-for="Patient.Gender" required>
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Patient.Gender" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label">Address</label>
                                <textarea class="form-control" asp-for="Patient.Address" rows="2"></textarea>
                                <span asp-validation-for="Patient.Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Medical Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="ri-heart-pulse-line me-2"></i>Medical Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Blood Group</label>
                                <select class="form-select" asp-for="Patient.BloodGroup">
                                    <option value="">Select Blood Group</option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                </select>
                                <span asp-validation-for="Patient.BloodGroup" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Marital Status</label>
                                <select class="form-select" asp-for="Patient.MaritalStatus">
                                    <option value="">Select Status</option>
                                    <option value="Single">Single</option>
                                    <option value="Married">Married</option>
                                    <option value="Divorced">Divorced</option>
                                    <option value="Widowed">Widowed</option>
                                </select>
                                <span asp-validation-for="Patient.MaritalStatus" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Occupation</label>
                                <input type="text" class="form-control" asp-for="Patient.Occupation">
                                <span asp-validation-for="Patient.Occupation" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Status</label>
                                <select class="form-select" asp-for="Patient.IsActive">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                                <span asp-validation-for="Patient.IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Emergency Contact -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="ri-phone-line me-2"></i>Emergency Contact
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contact Name</label>
                                <input type="text" class="form-control" asp-for="Patient.EmergencyContactName">
                                <span asp-validation-for="Patient.EmergencyContactName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contact Number</label>
                                <input type="tel" class="form-control" asp-for="Patient.EmergencyContactNumber">
                                <span asp-validation-for="Patient.EmergencyContactNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Relationship</label>
                                <input type="text" class="form-control" asp-for="Patient.RelationshipToEmergency" 
                                       placeholder="e.g., Spouse, Parent, Sibling">
                                <span asp-validation-for="Patient.RelationshipToEmergency" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Picture and Actions -->
            <div class="col-xl-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="ri-image-line me-2"></i>Profile Picture
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.Patient.ProfileImage))
                        {
                            <img src="@Model.Patient.ProfileImage" class="rounded-circle mb-3" width="150" height="150" alt="Patient" id="profilePreview">
                        }
                        else
                        {
                            <div class="rounded-circle bg-primary-light d-flex align-items-center justify-content-center mx-auto mb-3" 
                                 style="width: 150px; height: 150px;" id="profilePlaceholder">
                                <i class="ri-user-line fs-1 text-primary"></i>
                            </div>
                            <img src="#" class="rounded-circle mb-3 d-none" width="150" height="150" alt="Patient" id="profilePreview">
                        }
                        
                        <div class="mb-3">
                            <label for="profileImage" class="btn btn-outline-primary btn-sm">
                                <i class="ri-upload-2-line me-2"></i>Change Photo
                            </label>
                            <input type="file" id="profileImage" name="profileImage" class="d-none" accept="image/*" onchange="previewImage(this)">
                        </div>
                        
                        <p class="text-muted small">Allowed formats: JPG, PNG, GIF<br>Max size: 2MB</p>
                    </div>
                </div>

                <!-- Patient Info Summary -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="ri-information-line me-2"></i>Patient Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="text-muted small">Patient ID</label>
                            <p class="mb-0 fw-bold">P@Model.Patient.PatientID.ToString("D3")</p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Total Appointments</label>
                            <p class="mb-0 fw-bold">@Model.Patient.TotalAppointments</p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Last Visit</label>
                            <p class="mb-0">
                                @if (Model.Patient.LastVisit.HasValue)
                                {
                                    @Model.Patient.LastVisit.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">No visits yet</span>
                                }
                            </p>
                        </div>
                        <div>
                            <label class="text-muted small">Member Since</label>
                            <p class="mb-0">@Model.Patient.CreatedOn.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="ri-save-line me-2"></i>Save Changes
                        </button>
                        <a href="~/Admin/PatientProfile?id=@Model.Patient.PatientID" class="btn btn-outline-secondary w-100">
                            <i class="ri-close-line me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="ri-user-line fs-1 text-muted"></i>
            <p class="text-muted mt-3">Patient not found</p>
            <a href="~/Admin/Patients" class="btn btn-primary mt-2">
                <i class="ri-arrow-left-line me-2"></i>Back to Patients
            </a>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profilePreview').src = e.target.result;
                    document.getElementById('profilePreview').classList.remove('d-none');
                    var placeholder = document.getElementById('profilePlaceholder');
                    if (placeholder) {
                        placeholder.classList.add('d-none');
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
