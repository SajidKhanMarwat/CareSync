@page "/Admin/ResetPassword/{userId}"
@model CareSync.Pages.Admin.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "Layouts/_AuthLayout";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- Logo and Header -->
                    <div class="text-center mb-4">
                        <img src="~/theme/images/logo.svg" alt="CareSync" class="mb-3" style="height: 60px;">
                        <h3 class="fw-bold text-primary mb-2">Reset User Password</h3>
                        <p class="text-muted">Set a new password for user account</p>
                    </div>

                    <!-- User Information -->
                    @if (Model.UserDetail != null)
                    {
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                @{
                                    var avatarImage = Model.UserDetail.RoleType switch
                                    {
                                        CareSync.Shared.Enums.RoleType.Admin => "~/theme/images/admin.png",
                                        CareSync.Shared.Enums.RoleType.Doctor => "~/theme/images/doctor1.png",
                                        CareSync.Shared.Enums.RoleType.Patient => "~/theme/images/patient1.png",
                                        CareSync.Shared.Enums.RoleType.Lab or CareSync.Shared.Enums.RoleType.LabAssistant => "~/theme/images/lab-tech.png",
                                        _ => "~/theme/images/default-user.png"
                                    };
                                }
                                <img src="@(string.IsNullOrEmpty(Model.UserDetail.ProfilePicture) ? avatarImage : Model.UserDetail.ProfilePicture)" 
                                     class="rounded-circle me-3" width="50" height="50" alt="User">
                                <div>
                                    <h6 class="mb-0">@Model.UserDetail.FirstName @Model.UserDetail.LastName</h6>
                                    <small class="text-muted">@Model.UserDetail.Email</small><br>
                                    <small class="text-muted">Role: @Model.UserDetail.RoleName</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Success/Error Messages -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="ri-check-circle-line me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="ri-error-warning-line me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Reset Password Form -->
                    <form method="post">
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="newPassword">
                                New Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-lock-line text-muted"></i>
                                </span>
                                <input type="password" asp-for="Input.NewPassword" id="newPassword" 
                                       class="form-control border-start-0 border-end-0 ps-0" 
                                       placeholder="Enter new password" required>
                                <button class="btn btn-outline-light border-start-0" type="button" onclick="togglePassword('newPassword', 'toggleIcon1')">
                                    <i class="ri-eye-line text-muted" id="toggleIcon1"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                            <div class="password-strength mt-2" id="passwordStrength"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="confirmPassword">
                                Confirm Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="ri-lock-2-line text-muted"></i>
                                </span>
                                <input type="password" asp-for="Input.ConfirmPassword" id="confirmPassword" 
                                       class="form-control border-start-0 border-end-0 ps-0" 
                                       placeholder="Confirm new password" required>
                                <button class="btn btn-outline-light border-start-0" type="button" onclick="togglePassword('confirmPassword', 'toggleIcon2')">
                                    <i class="ri-eye-line text-muted" id="toggleIcon2"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Password Requirements -->
                        <div class="alert alert-light border mb-4">
                            <h6 class="alert-heading mb-2">
                                <i class="ri-information-line me-1"></i>Password Requirements
                            </h6>
                            <ul class="mb-0 ps-3">
                                <li class="small text-muted">At least 6 characters long</li>
                                <li class="small text-muted">Contains at least one uppercase letter</li>
                                <li class="small text-muted">Contains at least one lowercase letter</li>
                                <li class="small text-muted">Contains at least one number</li>
                                <li class="small text-muted">Contains at least one special character</li>
                            </ul>
                        </div>

                        <!-- Additional Options -->
                        <div class="mb-4">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="Input.RequirePasswordChange" id="requireChange">
                                <label class="form-check-label" for="requireChange">
                                    Require password change on next login
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Input.SendNotification" id="sendNotification" checked>
                                <label class="form-check-label" for="sendNotification">
                                    Send notification to user
                                </label>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="ri-key-line me-2"></i>Reset Password
                            </button>
                            <a href="/Admin/Users" class="btn btn-outline-secondary btn-lg py-3">
                                <i class="ri-arrow-left-line me-2"></i>Back to Users
                            </a>
                        </div>
                    </form>

                    <!-- Help Text -->
                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            <i class="ri-shield-check-line me-1"></i>
                            This action will immediately change the user's password
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'ri-eye-off-line text-primary';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'ri-eye-line text-primary';
            }
        }

        // Password strength indicator
        document.getElementById('newPassword').addEventListener('input', function() {
            const password = this.value;
            const strengthDiv = document.getElementById('passwordStrength');
            const strength = calculatePasswordStrength(password);
            
            let strengthText = '';
            let strengthClass = '';
            
            if (password.length === 0) {
                strengthDiv.innerHTML = '';
                return;
            }
            
            switch(strength) {
                case 0:
                case 1:
                    strengthText = 'Weak';
                    strengthClass = 'text-danger';
                    break;
                case 2:
                case 3:
                    strengthText = 'Medium';
                    strengthClass = 'text-warning';
                    break;
                case 4:
                case 5:
                    strengthText = 'Strong';
                    strengthClass = 'text-success';
                    break;
            }
            
            strengthDiv.innerHTML = `<small class="${strengthClass}">Password Strength: <strong>${strengthText}</strong></small>`;
        });

        function calculatePasswordStrength(password) {
            let strength = 0;
            if (password.length >= 6) strength++;
            if (password.length >= 8) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;
            return strength;
        }

        // Validate password match
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const password = document.getElementById('newPassword').value;
            const confirmPassword = this.value;
            
            if (confirmPassword && password !== confirmPassword) {
                this.setCustomValidity('Passwords do not match');
            } else {
                this.setCustomValidity('');
            }
        });

        // Auto-focus on password field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('newPassword').focus();
        });
    </script>
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .password-strength {
        height: 20px;
    }
    
    .alert-light {
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }
    
    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>
