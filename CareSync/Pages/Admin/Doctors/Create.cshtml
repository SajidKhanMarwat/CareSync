ðŸ‘¤ Name: Dr. ${doctorData.firstName} ${doctorData.lastName || ''}
ðŸ“§ Email: ${doctorData.email}
ðŸ¥ Specialization: ${doctorData.specialization}
ðŸ“… Working Days: ${doctorData.availableDays}
â° Sitting Time: ${formatTime(doctorData.startTime)} - ${formatTime(doctorData.endTime)}
ðŸ” Default Password: CareSync@123
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

The doctor should change their password on first login.
                    `;
                    
                    console.log(summary);
                    toast.success(result.message || 'Doctor created successfully!', 'Success', 6000);
                    
                    // Redirect to doctors list after a short delay
                    setTimeout(() => {
                        window.location.href = '/Admin/Doctors/DoctorsList';
                    }, 1500);
                } else {
                    toast.error(result.message || 'Failed to create doctor. Please try again.', 'Error');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            } catch (error) {
                console.error('Error creating doctor:', error);
                toast.error('An error occurred while creating the doctor. Please check the console for details.', 'Error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Collect and convert form data for submission
        function collectFormData() {
            const form = document.getElementById('doctorForm');
            const formData = new FormData(form);
            
            // Collect working days as comma-separated string
            const workingDays = [];
            document.querySelectorAll('input[name="workingDays"]:checked').forEach(checkbox => {
                workingDays.push(checkbox.value);
            });
            
            return {
                // Personal Info
                firstName: formData.get('firstName'),
                lastName: formData.get('lastName'),
                dateOfBirth: formData.get('dateOfBirth'),
                gender: formData.get('gender'),
                email: formData.get('email'),
                phoneNumber: formData.get('phoneNumber'),
                address: formData.get('address'),
                
                // Professional Details
                licenseNumber: formData.get('licenseNumber'),
                experienceYears: parseInt(formData.get('experience')) || 0,
                specialization: formData.get('specialization'),
                department: formData.get('department'),
                qualifications: formData.get('qualifications'),
                certifications: formData.get('certifications'),
                
                // Schedule & Fees
                availableDays: workingDays.join(', '),  // "Monday, Wednesday, Friday"
                startTime: formData.get('startTime'),    // "09:00" format
                endTime: formData.get('endTime'),        // "17:00" format
                appointmentDuration: parseInt(formData.get('appointmentDuration')) || 30,
                maxPatients: parseInt(formData.get('maxPatients')) || 20
            };
        }

        // Time range validation and display
        function validateTimeRange() {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            const displayDiv = document.getElementById('timeRangeDisplay');
            
            if (startTime && endTime) {
                const start = new Date('1970-01-01T' + startTime);
                const end = new Date('1970-01-01T' + endTime);
                
                if (end <= start) {
                    displayDiv.innerHTML = '<div class="alert alert-danger py-2"><i class="ri-error-warning-line me-2"></i>End time must be after start time!</div>';
                    return false;
                } else {
                    const diffMs = end - start;
                    const diffHrs = Math.floor(diffMs / 3600000);
                    const diffMins = Math.round((diffMs % 3600000) / 60000);
                    
                    displayDiv.innerHTML = `
                        <div class="alert alert-success py-2">
                            <i class="ri-time-line me-2"></i>
                            <strong>Sitting Duration:</strong> ${diffHrs} hour${diffHrs !== 1 ? 's' : ''} ${diffMins > 0 ? diffMins + ' minutes' : ''}
                            <br>
                            <small class="text-muted">Doctor will be available from ${formatTime(startTime)} to ${formatTime(endTime)}</small>
                        </div>
                    `;
                    return true;
                }
            }
            displayDiv.innerHTML = '';
            return true;
        }

        function formatTime(time) {
            const [hours, minutes] = time.split(':');
            const hour = parseInt(hours);
            const ampm = hour >= 12 ? 'PM' : 'AM';
            const displayHour = hour % 12 || 12;
            return `${displayHour}:${minutes} ${ampm}`;
        }

        document.getElementById('startTime').addEventListener('change', validateTimeRange);
        document.getElementById('endTime').addEventListener('change', validateTimeRange);

        // Quick preset time range setter
        function setTimeRange(start, end) {
            document.getElementById('startTime').value = start;
            document.getElementById('endTime').value = end;
            validateTimeRange();
        }

        // File upload preview
        document.getElementById('profilePicture').addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                e.target.parentElement.innerHTML = `<i class="ri-check-line text-success"></i><p class="text-success">Profile picture selected</p>`;
            }
        });

        document.getElementById('licenseDoc').addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                e.target.parentElement.innerHTML = `<i class="ri-check-line text-success"></i><p class="text-success">License document selected</p>`;
            }
        });

        document.getElementById('certificates').addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                e.target.parentElement.innerHTML = `<i class="ri-check-line text-success"></i><p class="text-success">${e.target.files.length} certificate(s) selected</p>`;
            }
        });
    </script>

    <style>
        .progress-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .progress-steps::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 0;
            right: 0;
            height: 2px;
            background: #e9ecef;
            z-index: 1;
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 2;
            background: white;
            padding: 0 10px;
        }

        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-bottom: 8px;
            transition: all 0.3s ease;
        }

        .step.active .step-number {
            background: #0d6efd;
            color: white;
        }

        .step.completed .step-number {
            background: #198754;
            color: white;
        }

        .step-title {
            font-size: 0.875rem;
            text-align: center;
            color: #6c757d;
        }

        .step.active .step-title {
            color: #0d6efd;
            font-weight: 600;
        }

        .step-content {
            display: none;
        }

        .step-content.active {
            display: block;
        }

        .upload-area {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .upload-area:hover {
            border-color: #0d6efd;
            background: #f8f9fa;
        }

        .upload-area i {
            font-size: 2rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .upload-area p {
            margin: 0;
            color: #6c757d;
        }

        .form-check-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        /* Time Range Presets */
        .btn-group-sm {
            flex-wrap: wrap;
        }
        
        .btn-group-sm .btn {
            margin-bottom: 5px;
        }
        
        @@media (max-width: 768px) {
            .btn-group-sm {
                display: flex;
                flex-direction: column;
            }
            
